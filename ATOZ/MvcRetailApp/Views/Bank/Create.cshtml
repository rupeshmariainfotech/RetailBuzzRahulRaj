<script type="text/javascript">
    $(function () {
        $("#BankDetails_bankName").autocomplete({
            source: "/Bank/GetBankNames",
            minLength: 1,
            select: function (event, ui) {
                if (ui.item) {
                    $("#BankDetails_bankName").val(ui.item.value);
                }
            }
        });
    });
</script>


@*this script is used for check IFSC validity on change function*@
<script type="text/javascript">
    $(function () {
        $("#BankDetails_IFSC").change(function () {
            var ifscno = $("#BankDetails_IFSC").val();
            $.getJSON("/Bank/ValidateIFSCNo", { ifscno: ifscno },
            function (data) {
                if (data == "success") {
                    document.getElementById("checkerror").style.display = "inline";
                    document.getElementById("BankDetails_IFSC").value = "";
                    document.getElementById("checkerror").innerHTML = "IFSCNO is already present!!!";
                }
                else {
                    document.getElementById("checkerror").style.display = "none";
                }
            });
            
            });        
    });
</script>

