<script type="text/javascript">
    function BankEditRow(id, bndry, count) {

        document.getElementById("EditPartialView").style.display = "inline";
        document.getElementById("ShowEditView").style.display = "none";

        for (var i = 1; i <= bndry; i++) {
            editid = "EditId" + i;
            rowid = "rowid" + i;

            if (document.getElementById(editid) != null) {
                document.getElementById(rowid).style.backgroundColor = "#F1DDE7";
            }
        }
        RowId = "rowid" + count;
        if (document.getElementById(RowId) != null) {
            document.getElementById(RowId).style.backgroundColor = "lightgreen";
        }

        $.ajax({
            url: '/Bank/EditPartial',
            type: "GET",
            data: { Id: id },
            success: function (data) {

                $("#EditPartialView").html(data);

            }
        });

        document.getElementById("searchtext").disabled = true;
        document.getElementById("searchbutton").disabled = true;
        document.getElementById("EditId" + count).disabled = true;
        document.getElementById('pagertextbox').disabled = true;
        document.getElementById('pagerdropdown').disabled = true;
        document.getElementById("pager").style.display = "none";
        $("#NumberOfRows").val(bndry);
        $("#SelectedRowChange").val(count);
    }
</script>

@*this script is used for show partial view entity*@
<script type="text/javascript">
    function UpdatePartial() {
        var count = 0;
        //this if conditions is for check required fields
        if ($("#BankDetails_address").val() == "" || $("#BankDetails_IFSC").val() == "" ||
            $("#BankDetails_Branch").val() == "" || $("#BankDetails_ContactNo1").val() == "" ||
            $("#BankDetails_bankName").val() == "" || $("#BankDetails_IFSC").val() == "" || $("#BankDetails_email").val() == "") {
            return false;
        }
            //if the above if condition is false check their other validations eg: length,number.(for required fields)
        else if ($("#BankDetails_ContactNo1").val().length < 7 || $("#BankDetails_ContactNo1").val().length > 14) {
            return false;
        }
            //this condition is for non-required fields.
        else {
            if ($("#BankDetails_email").val() != "") {
                $.ajax({
                    url: '/User/EmailValidate',
                    dataType: 'json',
                    async: false,
                    data: { email: $("#BankDetails_email").val() },
                    success: function (data) {
                        if (data != 'true') {
                            count++;
                            return false;
                        }
                    }
                });
            }

            if ($("#BankDetails_ContactNo2").val() != "") {
                if ($("#BankDetails_ContactNo2").val().length < 7 || $("#BankDetails_ContactNo2").val().length > 14) {
                    count++;
                    return false;
                }
            }
            if ($("#BankDetails_ContactNo3").val() != "") {
                if ($("#BankDetails_ContactNo3").val().length < 7 || $("#BankDetails_ContactNo3").val().length > 14) {
                    count++;
                    return false;
                }
            }
            if ($("#BankDetails_pinCode").val() != "") {
                if ($("#BankDetails_pinCode").val().length < 6 || $("#BankDetails_pinCode").val().length > 8) {
                    count++;
                    return false;
                }
            }
            if ($("#BankDetails_MICRCode").val() != "") {
                if ($("#BankDetails_MICRCode").val().length != 9) {
                    count++;
                    return false;
                }
            }
        }
        if (count == 0) {
            //this code is used for show changes in list
            var count = document.getElementById("SelectedRowChange").value;
            var branch = "branch" + count;
            var ifsc = "ifsc" + count;
            document.getElementById(branch).innerHTML = $("#BankDetails_Branch").val();
            document.getElementById(ifsc).innerHTML = $("#BankDetails_IFSC").val();

            //this code is used for to Show first lettr capital
            var txt = document.getElementById("BankDetails_Branch").value;
            txt = txt.replace(/\w\S*/g, function (txt) { return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase(); });
            document.getElementById(branch).innerHTML = txt;
            document.getElementById("BankDetails_Branch").value = txt;


            var bnk = {
                bankId: $("#BankDetails_bankId").val(),
                bankName: $("#BankDetails_bankName").val(),
                address: $("#BankDetails_address").val(),
                pinCode: $("#BankDetails_pinCode").val(),
                email: $("#BankDetails_email").val(),
                website: $("#BankDetails_website").val(),
                IFSC: $("#BankDetails_IFSC").val(),
                Branch: $("#BankDetails_Branch").val(),
                ContactNo1: $("#BankDetails_ContactNo1").val(),
                ContactNo2: $("#BankDetails_ContactNo2").val(),
                ContactNo3: $("#BankDetails_ContactNo3").val(),
                MICRCode: $("#BankDetails_MICRCode").val(),
            };

            $.ajax({
                url: "/Bank/EditPartial",
                type: "Post",
                data: JSON.stringify(bnk),
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    document.getElementById('EditPartialView').style.display = "inline";
                    document.getElementById('ShowEditView').style.display = "none";
                    $("#EditPartialView").html(data);
                }
            });
            document.getElementById("EditId" + count).disabled = false;
            document.getElementById("rowid" + count).style.background = "#F1DDE7";
            document.getElementById("pager").style.display = "inline";
            document.getElementById('pagertextbox').disabled = false;
            document.getElementById('pagerdropdown').disabled = false;
            document.getElementById("searchtext").disabled = false;
            document.getElementById("searchbutton").disabled = false;
        }
    }
</script>

