<script type="text/javascript">
    $(function () {
        $("#BankDetails_bankName").autocomplete({
            source: "/Bank/GetBankNames",
            minLength: 1,
            select: function (event, ui) {
                if (ui.item) {
                    $("#BankDetails_bankName").val(ui.item.value);
                    var bankname = document.getElementById("BankDetails_bankName").value;
                    $.ajax({
                        url: '/Bank/LoadBranchesByBankName',
                        type: "GET",
                        data: { name: bankname },
                        success: function (data) {

                            document.getElementById("Searchdiv").style.display = "inline";
                            $("#BranchView").html(data);
                        }
                    });

                }
            }
        });
    });
</script>


