                                </div>

                                <div class="form-group row">
                                    <label>MICR Code</label><br />
                                    @{
                                        if(Model.BankDetails.MICRCode != null)
                                        {
                                            @Html.DisplayFor(model => model.BankDetails.MICRCode)        
