                                <div class="form-group row">
                                    <label>Pincode</label><br />
                                    @{
                                        if(Model.BankDetails.pinCode != null)
                                        {
                                            @Html.DisplayFor(model => model.BankDetails.pinCode)    
                                        }
                                        else
                                        {
                                            <label>----</label>
                                        }
                                    }
                                </div>

                                <div class="form-group row">
                                    <label>Contact No. 1</label><br />
                                    @Html.DisplayFor(model => model.BankDetails.ContactNo1, new { @class = "form-control" })
                                </div>

                                <div class="form-group row">
                                    <label>Contact No. 2</label><br />
                                    @{
                                        if(Model.BankDetails.ContactNo2 != null)
                                        {
                                            @Html.DisplayFor(model => model.BankDetails.ContactNo2)    
                                        }
                                        else
                                        {
                                            <label>----</label>
                                        }
                                   }
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-4 col-lg-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group row">
                                    <label>Contact No. 3</label><br />
                                    @{
                                        if(Model.BankDetails.ContactNo3 != null)
                                        {
                                            @Html.DisplayFor(model => model.BankDetails.ContactNo3)    
                                        }
                                        else
                                        {
                                            <label>----</label>
                                        }
                                   }
                                </div>

                                <div class="form-group row">
                                    <label>Email</label><br />
                                    @Html.DisplayFor(model => model.BankDetails.email, new { @class = "form-control" })
                                </div>


                                <div class="form-group row">
                                    <label>Website</label><br />
                                    @{
                                        if(Model.BankDetails.website != null)
                                        {
                                            @Html.DisplayFor(model => model.BankDetails.website)    
                                        }
                                        else
                                        {
                                            <label>----</label>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
