@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "UpdateDetails";
}


<script type="text/javascript">
    $(document).ready(function () {

        var bndry = document.getElementById("NumberOfRows").value;

        for (var i = 1; i <= bndry; i++) {
            editid = "EditId" + i;
        }
    });
</script>

<div class="col-lg-12 col-md-12">
    <div class="row">
        <div class="row">
            <div class="row">
                <h2><strong>Bank </strong>Details</h2>

                <div class="form-group col-md-12 col-lg-12">
                    <div class="row">

                        <div class="form-group col-md-4 col-lg-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group row">
                                    <label>Branch</label><br />
                                    @Html.DisplayFor(model => model.BankDetails.Branch, new { @class = "form-control" })
                                </div>

                                <div class="form-group row">
                                    <label>Address</label><br />
