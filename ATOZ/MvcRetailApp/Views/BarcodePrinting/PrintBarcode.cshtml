@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "PrintBarcode";
}

<table style="border: 1px double;">
    <tr style="text-align:center; font-weight:bold">
        <td>
           <label>Retail Buzz</label>
        </td>
    </tr>
    <tr style="text-align:center; font-size:x-small">
        <td>
            <label>Shreeji Solitaire, Khadakpada Circle,<br />Kalyan West,Mumbai - 401306</label>
        </td>
    </tr>
    <tr style="font-size:x-small">
        <td>
            <label style="font-weight:bold">Size:</label>
            @Html.DisplayFor(model=>model.OpeningStockDetails.Size)
        </td>
    </tr>
    <tr style="font-size:x-small">
        <td>
            <label style="font-weight:bold">Color:</label>
            @Html.DisplayFor(model=>model.OpeningStockDetails.Color)
        </td>
    </tr>
    <tr style="font-size:x-small">
        <td>
            <label style="font-weight:bold">MRP Rs.</label>
            @Html.DisplayFor(model=>model.OpeningStockDetails.MRP)<label>/-&nbsp&nbsp(Inclusive of all taxes)</label>
        </td>
    </tr>
    <tr>
        <td style="text-align: center">
            @{
                string barcode = string.Empty;
                barcode = Model.OpeningStockDetails.Barcode;
            }
            <img src="@barcode" title="" width="150" height="40"/>
        </td>
    </tr>

    <tr>
        <td style="text-align: center">
            <div class="col-lg-12 col-md-12 col-sm-12 col-sm-12" style="text-align: left; font-size: medium; font-weight: bolder">
                @{
                    string CostPriceForDisplay = Convert.ToString(Session["EncodedCostPrice"]);
                }
                    <label style="font-size: medium; padding-top: 15px; font-weight: bolder;">@CostPriceForDisplay</label>
                           
            </div>
        </td>
    </tr>

    <tr style="font-size:x-small">
        <td>
            <label style="font-weight:bold">Email_ID:</label>
            <label>mary.mariainfotech.com</label>
        </td>
    </tr>
</table>
          
