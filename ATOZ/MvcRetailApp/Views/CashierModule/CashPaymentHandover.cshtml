<script type="text/javascript">
    function CalcCheckAmount(no) {
        var cash = "Cash" + no;
        var quan = "Quan" + no;
        var amt = "Amt" + no;
        var amount = +(document.getElementById(cash).innerHTML) * (+document.getElementById(quan).value);
        document.getElementById(amt).value = amount;
        CalTotalAmount();
    }

    function CalTotalAmount() {
        var finalamt = 0;
        for (i = 1; i <= 7; i++) {
            var amt = "Amt" + i;
            var quan = "Quan" + 1;
            finalamt = finalamt + (+document.getElementById(amt).value);
        }
        document.getElementById("TotalHandoverCash").value = finalamt;
        document.getElementById("HandoverCashDiv").style.display = 'inline';
        document.getElementById("HandoverCash").innerHTML = finalamt.toFixed(2);
    }
</script>

