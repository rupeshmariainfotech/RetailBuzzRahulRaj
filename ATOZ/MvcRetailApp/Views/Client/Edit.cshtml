<script type="text/javascript">
    function UpdateClientData() {
        var errorcount = 0;
        if ($("#ClientDetails_ClientId").val() == "" || $("#ClientDetails_Address").val() == "" || $("#ddlcountry").val() == "" ||
            $("#ddldistrict").val() == "" || $("#ddlstate").val() == "" || $("#ClientDetails_City").val() == "" ||
