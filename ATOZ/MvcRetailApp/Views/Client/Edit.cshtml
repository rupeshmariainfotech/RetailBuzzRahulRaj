<script type="text/javascript">
    function UpdateClient() {
        //$("#Update").attr("disabled", true);
        var count = document.getElementById("ClientRowValue").value;
        var clientname = "clientname" + count;
        var txt = document.getElementById("ClientDetails_ClientName").value;
        txt = txt.replace(/\w\S*/g, function (txt) { return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase(); });
        document.getElementById(clientname).innerHTML = txt;
        document.getElementById("ClientDetails_ClientName").value = txt;

        var cltmaster = {
            ClientId: $("#ClientDetails_ClientId").val(),
            ClientCode: $("#ClientDetails_ClientCode").val(),
            ClientName: $("#ClientDetails_ClientName").val(),
            TypeOfMembershipCard: $("#ddltypemembership").val(),
            Country: $("#ddlcountry").val(),
            State: $("#ddlstate").val(),
            District: $("#ddldistrict").val(),
            City: $("#ClientDetails_City").val(),
            Address: $("#ClientDetails_Address").val(),
            Email: $("#ClientDetails_Email").val(),
            Website: $("#ClientDetails_Website").val(),
            Pincode: $("#ClientDetails_Pincode").val(),
            ContactNo1: $("#ClientDetails_ContactNo1").val(),
            ContactNo2: $("#ClientDetails_ContactNo2").val(),
            ContactNo3: $("#ClientDetails_ContactNo3").val(),
            STNo: $("#ClientDetails_STNo").val(),
            VTNo: $("#ClientDetails_VTNo").val(),
            OtherTax: $("#ClientDetails_OtherTax").val(),
            TDSNo: $("#ClientDetails_TDSNo").val(),
            PanCard: $("#ClientDetails_PanCard").val(),
            NameOnCard: $("#ClientDetails_NameOnCard").val(),
            CardNumber: $("#ClientDetails_CardNumber").val(),
            IssueDate: $("#ClientDetails_IssueDate").val(),
            FormType: $("#ddlformtypes").val(),
            checkState: $("#ClientDetails_checkState").val(),
            ClientType: $("#ClientDetails_ClientType").val(),
            ConsumeResell: $("#ClientDetails_ConsumeResell").val(),
        };

        $.ajax({
            url: '/Client/EditPartial',
            contentType: "application/json; charset=utf-8",
            type: "POST",
            data: JSON.stringify(cltmaster),
            datatype: "json",
            success: function (data) {
                document.getElementById("LoadPartialView").style.display = "none";
                document.getElementById("ResultClientMaster").style.display = "inline";
                $("#ResultClientMaster").html(data);
            }
        });

        document.getElementById("SearchText").disabled = false;
        document.getElementById("SearchButton").disabled = false;
        document.getElementById("pagertextbox").disabled = false;
        document.getElementById("pagerdropdown").disabled = false;
        document.getElementById("pager").style.display = "inline";
        document.getElementById("rowId" + count).style.background = "#F1DDE7";
    }
</script>
