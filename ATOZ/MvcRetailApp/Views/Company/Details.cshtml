                                            @Html.DisplayFor(model => model.companydetails.ContactNo1)
                                        </div>
                                        <div class="form-group row">
                                            <label for="exampleInputname">Email</label><br />
                                            @Html.DisplayFor(model => model.companydetails.eMail)
                                        </div>
                                        <div class="form-group row">
                                            <label for="exampleInputname">State</label><br />
                                            @Html.DisplayFor(model => model.companydetails.State)
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-3 col-lg-3">
                                    <div class="col-md-12 col-lg-12">
                                        <div class="form-group row">
                                            <label for="exampleInputname">City</label><br />
                                            @Html.DisplayFor(model => model.companydetails.City)
                                        </div>
                                        <div class="form-group row">
                                            <label for="exampleInputname">Pan No</label><br />
                                            @Html.DisplayFor(model => model.companydetails.panCard)
                                        </div>
                                        <div class="form-group row">
