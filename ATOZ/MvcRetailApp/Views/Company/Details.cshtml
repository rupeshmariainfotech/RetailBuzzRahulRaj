                                    <div class="col-md-12 col-lg-12">
                                        <div class="form-group row">
                                            <label for="exampleInputname">Pin Code</label><br />
                                            @Html.DisplayFor(model => model.companydetails.pincode)
                                        </div>
                                        <div class="form-group row">
