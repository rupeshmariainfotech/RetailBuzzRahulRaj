<body>
    <section>
        <div class="col-md-12 col-lg-12">
            <div class="row">
                @using (Html.BeginForm("SelectCompany", "Company", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCreate" }))
                {
                    @Html.ValidationSummary(true)
                    <input type="hidden" id="CompanyCode" name="CompanyCode" />
                    <input type="hidden" id="CompanyName" name="CompanyName" />
                    <input type="hidden" id="FinancialYear" name="FinancialYear" />
                    <audio id="audio" muted="true" preload="auto" style="display: none" controls="controls" autoplay="false">
                        <source src="" type="audio/ogg" />
                    </audio>
                    <div style="width: 100%; text-align: center; margin-top:25px;">
                        <img src="~/Images/ssretail.png" /><br />
                        <h2 style="color: #102b58; margin-top: 10px; font-family: 'Good Times'; letter-spacing: 1px; font-size: 20px">Retail Management</h2>
                    </div>
                    <div class="col-lg-12 col-md-12 col-lg-offset-2 col-md-offset-2">
                        <div class="row col-lg-12 col-md-12">
                            <h2><strong class="caption" style="color: #102b58; font-size: 18px;">List Of Companies:</strong></h2>
                            <div class="table-responsive">
                                <table class="table-hover" style="width: 800px;">
                                    <thead>
                                        <tr>
                                            <th style="font-size: 15px; color: #102b58">Company Code</th>
                                            <th style="font-size: 15px; color: #102b58">Name</th>
                                            <th style="font-size: 15px; color: #102b58; text-align: right">Financial Year</th>
                                        </tr>
                                        <tr>
                                            <th colspan="3">
                                                <div style="border: 1px dotted #666;"></div>
                                            </th>
                                        </tr>
                                    </thead>
                                    @{
                    if (Model.CmpList != null && Model.CmpList.Any())
                    {
                        string compName = string.Empty;
                        string compCode = string.Empty;
                        string financialyear = string.Empty;
                        int count = 1;
                        foreach (var item in Model.CmpList)
                        {
                            compName = "companyName" + count;
                            compCode = "companyCode" + count;
                            financialyear = "financialYear" + count;
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <input type="button" onclick="SelectTheCompany(@count)" id="@compCode" value="@item.CompanyCode" style="border:none;color:#ff6a00;background-color:transparent;font-size:large;"/>
                                                </td>
                                                <td>
                                                    <a href="#" onclick="SelectTheCompany(@count)" style="text-decoration:none;color:#ff6a00;font-weight:bolder;font-size:large;font-family:'Goudy Old Style'">@item.companyName</a>
                                                </td>
                                                @{
                            string financialfromdate = Convert.ToDateTime(item.FinancialYearFrom).ToString("dd-MM-yyyy");
                            string financialtodate = Convert.ToDateTime(item.FinancialYearTo).ToString("dd-MM-yyyy");
                                                }
                                                <td><a href="#" onclick="SelectTheCompany(@count)" style="text-decoration:none;color:#ff6a00;font-weight:bolder;font-size:large;font-family:'Goudy Old Style';float:right">@financialfromdate To @financialtodate</a>
                                                    <input type="hidden" id="@compName" value="@item.companyName" />
                                                    <input type="hidden" id="@financialyear" value="@financialfromdate To @financialtodate" />
                                                </td>
                                            </tr>
                                        </tbody>
                            count++;
                        }
                    }
                                    }
                                </table>
                                <table class="col-md-2 col-lg-2"></table>
                            </div>
                        </div>
                        <br />
                        <input type="submit" id="Submit" style="display: none" />
                    </div>
                }
            </div>
        </div>
    </section>
</body>
