<script type="text/javascript">
    function SelectTheCompany(value) {
        var compName = "companyName" + value;
        var compCode = "companyCode" + value;
        var financialyear = "financialYear" + value;
        document.getElementById("CompanyCode").value = document.getElementById(compCode).value;
        document.getElementById("CompanyName").value = document.getElementById(compName).value;
        document.getElementById("FinancialYear").value = document.getElementById(financialyear).value;
        $("#Submit").trigger('click');
    }
</script>
