@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "GetRequisitionDetailsByDate";
}
<html>
<head>
    <title>Inword Details</title>
    <meta name="keywords" content="Retail Software" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
    <!-- Font CSS  -->
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400,600,700" />
    <!-- Core CSS  -->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />

    <!-- Plugin CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/datatables.min.css" />
        <link href="//cdn.datatables.net/responsive/1.0.1/css/dataTables.responsive.css" rel="stylesheet"/>

    <!-- Theme CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/theme.css" />
    <script src="@Url.Content("~/Scripts/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")"></script>
    <link href="http://cdn.datatables.net/plug-ins/a5734b29083/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
    <script src="http://cdn.datatables.net/plug-ins/a5734b29083/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script src="http://cdn.datatables.net/responsive/1.0.1/js/dataTables.responsive.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('#basicTable').DataTable({
                responsive: true,
            });
            console.clear();
        });
    </script>
    <!-- Show Inward Details on Click Of Po No. -->
   @* <script type="text/javascript">
        function ShowRequisitionDetails(count) {
            var ReId = "ReId" + count;
            window.open("/PurchaseOrder/PrintPurchaseOrder?id=" + document.getElementById(PoId).value, "_blank", "width=770,height=842,top=200px,left=300px")
        }
    </script>*@
</head>
<body>
    <section>
        <div style="height:30PX;"></div>
        <div class="col-lg-12 col-md-12 col-sd-12 col-xs-12">
            <div class="col-lg-2 col-md-2"></div>
            <table id="basicTable" class="table table-striped table-hover table-condensed col-lg-8 col-md-8 col-sm-8">
                <thead>
                    <tr>
                        <th class="col-lg-2 col-md-2">ReNo</th>
                        <th class="col-lg-2 col-md-2">Requisition Date</th>
                        <th class="col-lg-3 col-md-3">From Shop Name</th>
                        <th class="col-lg-3 col-md-3">To Shop Name(Retail)</th>
                        <th class="col-lg-3 col-md-3">To Shop Name(Independant)</th>
                       <th class="col-lg-3 col-md-3">To Godown Name(Independant)</th>
                        <th class="col-lg-3 col-md-3">Required Quantity</th>
                      
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model.Requisitionforgodownlist != null && Model.Requisitionforgodownlist.Any())
                        {
                            int count=1;
                            foreach (var data in Model.Requisitionforgodownlist)
                            {
                                string ReId = "ReId" + count;
                                <tr>
                                    <input type="hidden" id="@ReId" value="@data.Id" />
                                    <td style="text-align:center" class="col-lg-2 col-md-2" ><a href="#" onclick="ShowRequisitionDetails(@count)">@Html.DisplayFor(Modeldata => data.ReqCode)</a></td>
                                    <td style="text-align:center" class="col-lg-2 col-md-2">@Html.DisplayFor(Modeldata=>data.ModifiedOn)</td>
                                    <td style="text-align:center" class="col-lg-3 col-md-3">@Html.DisplayFor(Modeldata => data.LoggedInGodownName)</td>
                                    @{if(data.RequisitionFrom !="null")
                                    {
                                     <td style="text-align:center" class="col-lg-3 col-md-3">@Html.DisplayFor(Modeldata => data.RequisitionFrom)</td>
                                        <td></td>
                                        <td></td>
                                    }
                                    
                                   else if(data.RequisitionFrom=="null")                                    
                                    {
                                       <td></td>
                                        <td></td>
            
                                  <td style="text-align:center" class="col-lg-3 col-md-3">@Html.DisplayFor(Modeldata => data.ToGodownName)</td>
                                   }
                                   }
                                    @*
                                    }
                                    else
                                    {
                                   <td style="text-align:center" class="col-lg-3 col-md-3">@Html.DisplayFor(Modeldata => data.ToGodownName)</td>
                                    }
                                    }*@
                                    <td style="text-align:center" class="col-lg-3 col-md-3">@Html.DisplayFor(Modeldata=>data.RequiredQuantity)</td>
                                 
                                </tr>
                                count++;
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-2 col-md-2"></div>
    </section>
</body>
</html>

