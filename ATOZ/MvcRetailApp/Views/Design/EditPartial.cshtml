@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "EditPartial";
}
<!--code for on hover image-->
<link href="~/Content/popup.css" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8/jquery.validate.min.js"></script>
<style type="text/css">
    label.error {
        color: red;
        font-size: 12px;
    }
</style>


@using (Html.BeginForm())
{
    <!--code for on hover image-->
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.DesignDetails.DesignId)
    @Html.HiddenFor(model => model.DesignDetails.DesignCode)
    @Html.HiddenFor(model => model.DesignDetails.DesignPhoto)

    <div class="row">
        <div class="row">
            <h2><strong>Design</strong>&nbsp Details</h2>
        </div>
        <div class="col-md-12 col-lg-12">


            <div class="row">
                <div class="form-group col-md-4 col-lg-4">
                    <label for="exampleInputname">Design Code</label>
                </div>
                <div class="form-group col-md-5 col-lg-5">
                    @Html.DisplayFor(model => model.DesignDetails.DesignCode)
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4 col-lg-4">
                    <label for="exampleInputname">Design Name : <i style="color: red">*</i></label>
                </div>
                <div class="form-group col-md-5 col-lg-5">
                    @Html.TextBoxFor(model => model.DesignDetails.DesignName, new { @class = "form-control", @placeholder = "Design Name" })
                    @Html.ValidationMessageFor(model => model.DesignDetails.DesignName, null, new { style = "color:red" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4 col-lg-4">
                    <label for="exampleInputname">Design Description :</label>
                </div>
                <div class="form-group col-md-5 col-lg-5">
                    @Html.TextBoxFor(model => model.DesignDetails.DesignDescription, new { @class = "form-control", @placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.DesignDetails.DesignDescription, null, new { style = "color:red" })
                </div>
            </div>

            @* <div class="row">
                <div class="form-group col-md-4 col-lg-4">
                    <label for="exampleInputname">Design Size: <i style="color: red">*</i></label>
                </div>
                <div class="form-group col-md-5 col-lg-5">
                    @Html.TextBoxFor(model => model.DesignDetails.DesignSize, new { @class = "form-control" , @placeholder = "Size" })
                    @Html.ValidationMessageFor(model => model.DesignDetails.DesignSize, null, new { style = "color:red" })
                </div>
            </div>*@

            <div class="row">
                <div class="form-group col-md-4 col-lg-4">

                    <label for="exampleInputname">Design Photo :</label>
                </div>
                <div class="form-group col-md-5 col-lg-5">
                    @{
    string photo = string.Empty;
    if (Model.DesignDetails.DesignPhoto == "../DesignPhotos/")
    {
        
                        <label style="text-align: center">---</label>
    }
    else
    {
        photo = Model.DesignDetails.DesignPhoto;
                        <div id="picture">
                            <a class="small" href="#" title="">
                                <img src="@photo" title="" width="120" height="120"/>
                                <img class="large" src="@photo" title="" /></a>
                        </div>
    }
                    }

                    <div style="height: 50px"></div>
                    <input type="file" name="file" id="file" data-val="true" data-val-required="Please select a file" class="singleTextBox" />
                </div>
            </div>

            <div class="row">
                <div class="col-lg-offset-3">
                    <button type="button" class="btn btn-success" onclick="DesignDetailsEdit()" id="Editbtn">Update</button>
                </div>
            </div>
        </div>
    </div>
}