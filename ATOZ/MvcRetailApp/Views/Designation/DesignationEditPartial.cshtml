@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "DesignationEditPartial";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8/jquery.validate.min.js"></script>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DesignationDetails.Id)
    @Html.HiddenFor(model => model.DesignationDetails.DesignationCode)

    
    <div class="row">
        <h2><strong>Designation </strong>Details</h2>

        <div class="form-group col-md-12 col-lg-12">
            <div class="col-md-12 col-lg-12">
                <div class="row">
                    <div class="row">
                        <div class="form-group col-md-4 col-lg-4">
                            <label for="exampleInputname">Designation Name</label>
                        </div>

                        <div class="form-group col-md- col-lg-4">
                            @Html.TextBoxFor(model => model.DesignationDetails.DesignationName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DesignationDetails.DesignationName, null, new { style = "color:red" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-offset-3">
                        <button type="button" class="btn btn-success" onclick="UpdateDesignationPartial()">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
