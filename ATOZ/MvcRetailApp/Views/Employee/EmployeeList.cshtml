@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "GetEmployeeDetails";
}

<script src="@Url.Content("~/Scripts/jquery.tablesorter.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.pager.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("table.tablesorter").tablesorter({ widthFixed: true, sortList: [[0, 0]] })
       .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
    });
</script>

   


<div class="col-md-11 col-lg-11">
    <div class="row">
        <div class="row">
            <div class="row">
                <table class="tablesorter table">
                    <thead>
                       <tr>
                <th>
                    <label style="color: royalblue">Code</label></th>
                <th>
                    <label style="color: royalblue">Employees</label></th>
                 
                <th>
                    <label style="color: royalblue"> Options</label></th>
            </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.EmpList != null && Model.EmpList.Any())
                            {

                                string deleteId = string.Empty;
                                string lineId = string.Empty;
                                string editId = string.Empty;
                                string rowId = string.Empty;
                                string labelEditId = string.Empty;
                                string labelDeleteId = string.Empty;
                                int cnt = Model.EmpList.Count();
                                int count = 1;
                                foreach (var item in Model.EmpList)
                                {
                                    
                                    deleteId = "deleteId" + count;
                                    lineId = "lineId" + count;
                                    editId = "editId" + count;
                                    rowId = "rowId" + count;
                                    labelEditId = "labelEditId" + count;
                                    labelDeleteId = "labelDeleteId" + count;
                
                            <tr id="@rowId">
                               <td>@Html.DisplayFor(model => item.EmployeeCode)</td>
                    <td>@Html.DisplayFor(modelitem => item.Name) @*@Html.DisplayFor(modelitem => item.LastName)*@</td>

                                <td><a href="#" onclick="Edit(@item.EmpId, @cnt, @count)" id="@editId">&nbsp Edit</a><label id="@labelEditId" style="display:none;font-weight:normal;color:gray;">&nbsp Edit</label>
                        <label id="@lineId">&nbsp |</label>
                        <a href="#" onclick="Delete(@item.EmpId, @cnt,@count)" id="@deleteId">&nbsp Delete</a><label id="@labelDeleteId" style="display:none;font-weight:normal;color:gray;">&nbsp Delete</label>
                    </td>
                </tr>
                
                                    count = count + 1;
                                }
                            }
                        }
                    </tbody>
                </table>
                <br />
                <div id="pager">
                    <form>
                        <img src="../Images/first.png" class="first" id="first" />
                        <img src="../Images/prev.png" class="prev" id="prev" />
                        <input type="text" class="pagedisplay" id="pagertextbox" style="width:170px" />
                        <img src="../Images/next.png" class="next" id="next" />
                        <img src="../Images/last.png" class="last" id="last" />
                        <select class="pagesize" id="pagerdropdown">
                            <option selected="selected" value="5">5</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
  

