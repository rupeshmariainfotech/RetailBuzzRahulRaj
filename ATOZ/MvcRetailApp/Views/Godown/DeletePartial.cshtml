@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "DeletePartial";
}
@Html.HiddenFor(model => model.GodownDetails.GodownId)
@Html.HiddenFor(model => model.GodownDetails.GdCode)
@Html.HiddenFor(model => model.GodownDetails.ComponyName)
@Html.HiddenFor(model => model.GodownDetails.ContactNo1)
@Html.HiddenFor(model => model.GodownDetails.ContactNo2)
@Html.HiddenFor(model => model.GodownDetails.ContactNo3)
@Html.HiddenFor(model => model.GodownDetails.Designation)
@Html.HiddenFor(model => model.GodownDetails.EmpEmail)
@Html.HiddenFor(model => model.GodownDetails.EmpName)
@Html.HiddenFor(model => model.GodownDetails.GodownEmail)
@Html.HiddenFor(model => model.GodownDetails.GodownName)
@Html.HiddenFor(model => model.GodownDetails.ShortCode)


<div class="row form-group">
    <h2>Godown Details</h2>
    <div class="col-lg-8 col-md-8">
        <label>Godown Code: </label>
        @Html.DisplayFor(model => model.GodownDetails.GdCode)
    </div>
</div>

<div class="row form-group">
    <div class="col-lg-4 col-md-4">
        <label>Company Name</label><br />
        @Html.DisplayFor(model => model.GodownDetails.ComponyName)
    </div>

    <div class="col-lg-4 col-md-4">
        <label>Contact No 2</label><br />
        @Html.DisplayFor(model => model.GodownDetails.ContactNo2)
    </div>

    <div class="col-lg-4 col-md-4">
        <label>Employee Name</label><br />
        @Html.DisplayFor(model => model.GodownDetails.EmpName)
    </div>
</div>

<div class="row form-group">

    <div class="col-lg-4 col-md-4">
        <label>Godown Name</label><br />
        @Html.DisplayFor(model => model.GodownDetails.GodownName)
    </div>

    <div class="col-lg-4 col-md-4">
        <label>Contact No. 3</label><br />
        @Html.DisplayFor(model => model.GodownDetails.ContactNo3)
    </div>

    <div class="col-lg-4 col-md-4">
        <label>Designation</label><br />
        @Html.DisplayFor(model => model.GodownDetails.Designation)
    </div>
</div>

<div class="row form-group">
    <div class="col-lg-4 col-md-4">
        <label>Contact No. 1</label><br />
        @Html.DisplayFor(model => model.GodownDetails.ContactNo1)
    </div>

    <div class="col-lg-4 col-md-4">
        <label>Godown Email</label><br />
        @Html.DisplayFor(model => model.GodownDetails.GodownEmail)
    </div>

    <div class="col-lg-4 col-md-4">
        <label>Email</label><br />
        @Html.DisplayFor(model => model.GodownDetails.EmpEmail)
    </div>
</div>

<div class="row form-group">
    <div class="col-lg-4 col-md-4">
        <label>Short Code</label><br />
        @Html.DisplayFor(model => model.GodownDetails.ShortCode)
    </div>
</div>

<br />
<br />
<div class="row form-group">
    <div class="col-lg-12 col-md-12">
        <div class="row">
            <h2>Godown Addresses</h2>
        </div>
        <table class="table-bordered col-md-12 col-lg-12" style="border-width: medium; border-color: grey;">
            <tr>

                <th class="col-lg-4 col-md-4">Area Name</th>
                <th class="col-lg-4 col-md-4">Location</th>
                <th class="col-lg-4 col-md-4">Address</th>

            </tr>

            @{
                foreach (var address in Model.GodownAddressList)
                { 
                <tr>
                    <td class="col-lg-4 col-md-4">@Html.DisplayFor(model => address.AreaName)</td>
                    <td class="col-lg-4 col-md-4">@Html.DisplayFor(model => address.Location)</td>
                    <td class="col-lg-4 col-md-4">@Html.DisplayFor(model => address.Address)</td>
                </tr>
                }
            }


        </table>
    </div>
</div>

<div class="row form-group">
    <div class="col-lg-offset-5 col-md-offset-5">
        <button type="button" onclick="DeleteData()" class="btn btn-success">Delete</button>
    </div>
</div>