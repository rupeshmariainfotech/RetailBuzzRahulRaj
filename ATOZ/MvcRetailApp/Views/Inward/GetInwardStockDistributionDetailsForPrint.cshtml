@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "GetInwardStockDistributionDetailsForPrint";
}

<script type="text/javascript">
    $(function () {

        var temp = $("#date").text();
        var dat = new Date(temp);
        var month = ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"];
        var data = dat.getDate() + "/" + month[dat.getMonth()] + "/" + dat.getFullYear();
        document.getElementById('date').innerHTML = data;

        $("#Print").click(function () {
            confirmbox("Do You Want To Print This Inward?");
        });
    });
</script>

@Html.HiddenFor(model => model.InwardFromStockDistributionDetails.InwardId)

<div class="col-lg-12 col-md-12">
    <table style="border: 1px double; width: 100%">
        <tr>
            <td>
                <div class="col-md-12 col-lg-12">
                    <div class="row">

                        <div class="form-group col-md-8 col-lg-8">
                        </div>

                        <div class="col-lg-4 col-md-4">
                            <div class="col-md-12 col-lg-12" style="height: 55%">
                                @{
                                    string date = Convert.ToDateTime(Model.InwardFromStockDistributionDetails.InwardDate).ToString("MM/dd/yyyy");
                                }
                                <div style="height: 10px"></div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            <label style="font-size: 14px;">Date</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            <label id="date" style="font-weight: normal">&nbsp @date</label>
                                        </div>
                                    </div>
                                </div>
                                <div style="height: 7px"></div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            <label style="font-size: 14px;">Inward No.</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            <label style="font-weight: normal">&nbsp @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.InwardNo)</label>
                                        </div>
                                    </div>
                                </div>
                                <div style="height: 7px"></div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            <label style="font-size: 14px;">Outward No.</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            <label style="font-weight: normal">&nbsp @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.StockDistributionNo)</label>
                                        </div>
                                    </div>
                                </div>

                                <div style="height: 7px"></div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            <label style="font-size: 14px;">Reference No</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="row">
                                            &nbsp @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.GatePass)
                                        </div>
                                    </div>
                                </div>

                                <div style="height: 10px"></div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="table table-bordered">
                                    @{
                                        var code = Model.InwardFromStockDistributionDetails.Code;
                                        if (code.Contains("GD"))
                                        {
                                        <div class="row">
                                            <div style="height: 10px"></div>
                                            <div class="col-md-12 col-lg-12">
                                                <div class="col-md-4 col-lg-4">
                                                    <label>Godown Name</label><br />
                                                    @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.GodownName)
                                                </div>
                                                <div class="col-md-4 col-lg-4">
                                                    <label>Godown Contact-Person</label><br />
                                                    @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.GodownContactPerson)
                                                </div>
                                                <div class="col-md-4 col-lg-4">
                                                    <label>Godown Contact-No</label><br />
                                                    @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.GodownContactNo)
                                                </div>
                                            </div>
                                            <div style="height: 40px"></div>
                                            <div class="form-group"></div>
                                        </div>
                                        }
                                        else
                                        {
                                        <div class="row">
                                            <div style="height: 10px"></div>
                                            <div class="col-md-12 col-lg-12">
                                                <div class="col-md-4 col-lg-4">
                                                    <label>Shop Name</label><br />
                                                    @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.ShopName)
                                                </div>
                                                <div class="col-md-4 col-lg-4">
                                                    <label>Shop Contact-Person</label><br />
                                                    @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.ShopContactPerson)
                                                </div>
                                                <div class="col-md-4 col-lg-4">
                                                    <label>Shop Contact-No</label><br />
                                                    @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.ShopContactNo)
                                                </div>
                                            </div>
                                            <div style="height: 40px"></div>
                                            <div class="form-group"></div>
                                        </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <b style="font-size: 15px">Item Details:</b>
                    <div class="row">
                        <div class="form-group">
                            @if (Model.InwardItemFromStockDistributionList != null && Model.InwardItemFromStockDistributionList.Any())
                            {
                                <table style="width: 100%" border="1">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1 col-lg-1">SNo.</th>
                                            <th class="col-md-2 col-lg-2">
                                                <label class="CenterText">Item</label></th>
                                            <th class="col-md-2 col-lg-2">
                                                <label class="CenterText">Description</label></th>
                                            <th class="col-md-2 col-lg-2">
                                                <label class="CenterText">Color</label></th>
                                            <th class="col-md-2 col-lg-2">
                                                <label class="CenterText">Material</label></th>
                                            <th class="col-md-2 col-lg-2">
                                                <label class="CenterText">Design</label></th>
                                            <th class="col-md-2 col-lg-2">
                                                <label class="CenterText">Unit</label></th>
                                            <th class="col-md-2 col-lg-2">
                                                <label style="text-align: center">
                                                    Rate
                                                                    <br />
                                                    (<i class="fa fa-inr"></i>)
                                                </label>
                                            </th>
                                            <th class="col-md-1 col-lg-1" style="text-align: right">
                                                <label>Quantity</label></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                int count = 1;
                                foreach (var item in Model.InwardItemFromStockDistributionList)
                                {

                                    var Rate = Convert.ToDouble(@item.MRP).ToString("#,###.00##");
                                    var Quantity = Convert.ToDouble(@item.ItemQuantity).ToString("#,###.00##");
                                            <tr>
                                                <td style="text-align: center">@count</td>
                                                <td style="text-align: left">
                                                    <label style="font-weight: normal">@item.ItemName</label></td>
                                                <td style="text-align: left">
                                                    <label style="font-weight: normal">@item.Description</label></td>
                                                <td style="text-align: left">
                                                    <label style="font-weight: normal">@item.Color</label></td>
                                                <td style="text-align: left">
                                                    <label style="font-weight: normal">@item.Material</label></td>
                                                <td style="text-align: left">
                                                    <label style="font-weight: normal">@item.DesignName</label></td>
                                                <td style="text-align: left">
                                                    <label style="font-weight: normal">@item.Unit</label></td>
                                                <td style="text-align: right">
                                                    <label style="font-weight: normal">@Rate</label></td>
                                                <td style="text-align: right">
                                                    <label style="font-weight: normal">@Quantity</label></td>
                                            </tr>
                                    count++;
                                }
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </td>
        </tr>

        <tr>
            <td>
                <div class="col-md-12 col-lg-12">
                    <div class="col-md-10 col-lg-10"></div>
                    <div class="col-md-2 col-lg-2">
                        <label style="font-size: 14px">Prepared By,</label><br />
                        <p style="font-size: 15px">@Html.DisplayFor(model => model.InwardFromStockDistributionDetails.EmployeeName)</p>
                    </div>
                    <div style="height: 70px"></div>
                </div>

                @{
                    if (Model.InwardFromStockDistributionDetails.Narration != null)
                    {
                    <div class="col-md-12 col-lg-12">
                        <div class="col-md-2 col-lg-2">
                            <label style="font-size: 14px">Narration</label><br />
                        </div>
                        <div class="col-md-10 col-lg-10">
                            @Html.DisplayFor(model => model.InwardFromStockDistributionDetails.Narration)
                        </div>
                        <div style="height: 70px"></div>
                    </div>
                    }
                }

            </td>
        </tr>

    </table>
    <br />
    <div class="col-lg-offset-5 col-md-offset-5">
        <button type="button" id="Print" class="btn btn-success">Print</button>
    </div>
</div>
