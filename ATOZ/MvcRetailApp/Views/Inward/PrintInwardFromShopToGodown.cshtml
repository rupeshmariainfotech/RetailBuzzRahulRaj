@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "PrintInwardFromShopToGodown";
}

<script type="text/javascript">
    $(function () {
        var temp = $("#date").text();
        var dat = new Date(temp);
        var month = ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"];
        var data = dat.getDate() + "/" + month[dat.getMonth()] + "/" + dat.getFullYear();
        document.getElementById('date').innerHTML = data;
    });
</script>

<table style="border: 1px double; width: 100%">
    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <img src="~/Images/retail-logo.png" class="img-responsive" alt="logo" style="max-width: 100px;" />
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <label><b>A To Z DADAR T.T.</b></label><br />
                        <label>Shopping Centre, Dadar T.T., Dadar East,Mumbai - 400014</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center">
                        <label style="font-size: x-large;"><b>Inward From Shop</b></label>
                    </td>
                </tr>
            </table>

            <table border="1" cellpadding="0" cellspacing="0" style="width: 100%">
                <tr>
                    <td style="width: 34%">
                        <table cellpadding="2" cellspacing="0">
                            <tr>
                                <td colspan="2">
                                    <label style="font-size: 20px"><b>Shop Details</b></label>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label><b>Name: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.ShopName)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Address: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.ShopAddress)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Contact No: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.ShopContactNo)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Email: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.ShopEmail)
                                </td>
                            </tr>
                        </table>
                    </td>

                    <td style="width: 35%">
                        <table cellpadding="2" cellspacing="0">
                            <tr>
                                <td colspan="2">
                                    <label style="font-size: 20px"><b>Salesman Details</b></label>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label><b>Name: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.SalesmanName)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Designation: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.SalesmanDesignation)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Contact No: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.SalesmanContactNo)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Email: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.SalesmanEmail)
                                </td>
                            </tr>
                            <tr style="height: 40px"></tr>
                        </table>
                    </td>

                    <td>
                        <table cellpadding="2" cellspacing="0">
                            <tr>
                                <td>
                                    <label><b>Date : &nbsp;</b></label>
                                </td>
                                <td>
                                    @{ 
                                        string date = Convert.ToDateTime(Model.InwardFromShopToGodownDetails.Date).ToString("MM/dd/yyyy");
                                    }
                                    <label style="font-weight: normal" id="date">@date</label>
                                </td>
                            </tr>
                            <tr style="height: 20px"></tr>
                            <tr>
                                <td>
                                    <label><b>Inward No : &nbsp;</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.InwardCode)
                                </td>
                            </tr>
                            <tr style="height: 20px"></tr>
                            <tr>
                                <td>
                                    <label><b>Outward No : &nbsp;</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.OutwardNo)
                                </td>
                            </tr>
                            <tr style="height: 20px"></tr>
                            <tr>
                                <td>
                                    <label><b>Reference No : &nbsp;</b></label>
                                </td>
                                <td>
                                    <label style="font-weight: normal; font-size: 18px">@Html.DisplayFor(model => model.InwardFromShopToGodownDetails.GatePass)</label>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />

            <label style="font-size: large; font-weight: bold">Item Details:</label>
            <table border="2" style="border-collapse: collapse; width: 100%" cellpadding="2" cellspacing="0">
                <thead>
                    <tr>
                        <th style="text-align: left">
                            <label>Sno.</label>
                        </th>
                        <th style="text-align: left">
                            <label>Item</label>
                        </th>
                        <th style="text-align: left">
                            <label>Description</label>
                        </th>
                        <th style="text-align: left">
                            <label>Material</label>
                        </th>
                        <th style="text-align: left">
                            <label>Design</label>
                        </th>
                        <th style="text-align: left">
                            <label>Unit</label>
                        </th>
                        <th style="text-align: left">
                            <label>Color</label>
                        </th>
                        <th style="text-align: left">
                            <label>Rate</label>
                        </th>
                        <th style="text-align: right">
                            <label>Quantity</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{

                        int count = 1;
                        foreach (var data in Model.InwardItemFromShopToGodownList)
                        {
                        <tr>
                            @{
                            string qty = Convert.ToDouble(data.Quantity).ToString("#,###.00##");
                            string rate = Convert.ToDouble(data.MRP).ToString("#,###.00##");
                            }
                            <td style="text-align: left">@count</td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.ItemName</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.Description</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.Material</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.DesignName</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.Unit</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.Color</label>
                            </td>
                            <td style="text-align: right">
                                <label style="font-weight: normal">@rate</label>
                            </td>
                            <td style="text-align: right">
                                <label style="font-weight: normal">@qty</label>
                            </td>
                        </tr>
                            count += 1;
                        }
                    }
                </tbody>
            </table>

            <div style="text-align: right">
                <label style="font-weight: bold">Prepared By</label><br />
                <label style="margin-right: 10px">@Html.DisplayFor(model => model.InwardFromShopToGodownDetails.EmpName)</label>
            </div>

            @{
                if (Model.InwardFromShopToGodownDetails.Narration != null)
                { 
                <label style="font-weight: bold">Narration : </label>
                @Html.DisplayFor(model => model.InwardFromShopToGodownDetails.Narration)        
                }
            }

        </td>
    </tr>
</table>
