@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "PrintInwardInterShop";
}

<link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css" />

<script type="text/javascript">
    $(function () {
        var temp = $("#date").text();
        var dat = new Date(temp);
        var month = ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"];
        var data = dat.getDate() + "/" + month[dat.getMonth()] + "/" + dat.getFullYear();
        document.getElementById('date').innerHTML = data;
    });
</script>

<table style="border: 1px double; width: 100%">
    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <img src="~/Images/retail-logo.png" class="img-responsive" alt="logo" style="max-width: 100px;" />
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <label><b>A To Z DADAR T.T.</b></label><br />
                        <label>Shopping Centre, Dadar T.T., Dadar East,Mumbai - 400014</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center">
                        <label style="font-size: x-large;"><b>Inward Inter Shop</b></label>
                    </td>
                </tr>
            </table>

            <table border="1" cellpadding="0" cellspacing="0" style="width: 100%">
                <tr>
                    <td style="width: 34%">
                        <table cellpadding="2" cellspacing="0">
                            <tr>
                                <td colspan="2">
                                    <label style="font-size: 15px"><b>From Shop Details</b></label></td>
                            </tr>
                            <tr>
                                <td>
                                    <label><b>Name: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.FromShopName)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Contact Number: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.FromShopContactNo)
                                </td>
                            </tr>
                            <tr style="height: 12px"></tr>
                            <tr>
                                <td>
                                    <label><b>Email: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.FromShopEmail)
                                </td>
                            </tr>
                            <tr style="height: 20px"></tr>
                        </table>
                    </td>

                    <td style="width: 35%">
                        <table cellpadding="2" cellspacing="0">
                            <tr>
                                <td colspan="2">
                                    <label style="font-size: 15px"><b>Salesman Details</b></label></td>
                            </tr>
                            <tr>
                                <td>
                                    <label><b>Name: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.SalesmanName)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label><b>Email: &nbsp</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.SalesmanEmail)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label><b>Contact Number: &nbsp</b></label></td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.SalesmanContact)
                                </td>
                            </tr>
                            <tr style="height: 55px"></tr>
                        </table>
                    </td>

                    <td>
                        <table cellpadding="2" cellspacing="0">
                            <tr>
                                <td>
                                    <label><b>Date</b></label>
                                </td>
                                <td>
                                    @{
                                        var date = Convert.ToDateTime(Model.InwardInterShopDetails.Date).ToString("MM/dd/yyyy");
                                    }
                                    <label style="font-weight: normal" id="date">@date</label>
                                </td>
                            </tr>
                            <tr style="height: 20px"></tr>
                            <tr>
                                <td>
                                    <label><b>Inward No</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.InwardCode)
                                </td>
                            </tr>
                            <tr style="height: 20px"></tr>
                            <tr>
                                <td>
                                    <label><b>Outward No</b></label>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.InwardInterShopDetails.OutwardCode)
                                </td>
                            </tr>
                            <tr style="height: 20px"></tr>
                            <tr>
                                <td>
                                    <label><b>Reference No</b></label>
                                </td>
                                <td>
                                    <label style="font-weight: normal; font-size: 18px">@Html.DisplayFor(model => model.InwardInterShopDetails.GatePass)</label>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <br />

            <label style="font-size: large; font-weight: bold">Item Details:</label>
            <table border="2" style="border-collapse: collapse; width: 100%" cellpadding="2" cellspacing="0">
                <thead>
                    <tr>
                        <th style="text-align: center">
                            <label>Sno.</label>
                        </th>
                        <th style="text-align: center">
                            <label>Item</label>
                        </th>
                        <th style="text-align: center">
                            <label>Description</label>
                        </th>
                        <th style="text-align: center">
                            <label>Color</label>
                        </th>
                        <th style="text-align: center">
                            <label>Material</label>
                        </th>
                        <th style="text-align: center">
                            <label>Design</label>
                        </th>
                        <th style="text-align: center">
                            <label>
                                Rate<br />
                                (<i class="fa fa-inr"></i>)</label>
                        </th>
                        <th style="text-align: center">
                            <label>Quantity</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        
                        int count = 1;
                        foreach (var data in Model.InwardInterShopItemList)
                        {                                                                        
                        <tr>
                            @{
                            string qty = Convert.ToDouble(data.Quantity).ToString("#,###.000##");
                            string rate = Convert.ToDouble(data.MRP).ToString("#,###.00##");
                            }
                            <td style="text-align: left">@count</td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.ItemName</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.ItemDescription</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.Color</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.Material</label>
                            </td>
                            <td style="text-align: left">
                                <label style="font-weight: normal">@data.DesignName</label>
                            </td>
                            <td style="text-align: right">
                                <label style="font-weight: normal">@rate</label>
                            </td>
                            <td style="text-align: right">
                                <label style="font-weight: normal">@qty</label>
                            </td>
                        </tr>
                            count += 1;
                        }
                    }
                </tbody>
            </table>

            <div style="text-align: right">
                <div style="height: 10px"></div>
                <label style="font-weight: bold">Prepared By</label><br />
                <label style="margin-right: 20px">
                    @Html.DisplayFor(model => model.InwardInterShopDetails.EmpName)
                </label>
            </div>

            @{
                if (Model.InwardInterShopDetails.Narration != null)
                {
                    <label style="font-weight:bold">Narration : </label>
                    @Html.DisplayFor(model => model.InwardInterShopDetails.Narration)
                }
            }
        </td>
    </tr>
</table>

