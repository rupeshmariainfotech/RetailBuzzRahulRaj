<script type="text/javascript">
    function CallInward(type) {
        if (type == 'Supplier') {
            $.ajax({
                url: "/Inward/InwardFromSupplier",
                type: "GET",
                success: function (data) {
                    $("#LoadInward").html(data);
                }
            });
        }
        else {
            $.ajax({
                url: "/Inward/InwardWithoutPO",
                type: "GET",
                success: function (data) {
                    $("#LoadInward").html(data);
                }
            });
        }
    }
</script>
