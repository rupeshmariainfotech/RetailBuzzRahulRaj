@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "CategoryDeletePartial";
}

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.ItemCategoryDetails.CategoryId)
        @Html.HiddenFor(model=>model.ItemCategoryDetails.CategoryName)
        @Html.HiddenFor(model=>model.ItemCategoryDetails.ItemCategoryCode)

    <h2><strong>Item Category </strong>Details</h2>
    <br />

    <div class="col-md-12 col-lg-12">
        <div class="col-md-12 col-lg-12">
            <div class="row">
                <div class="form-group col-md-4 col-lg-4">
                    <label for="exampleInputname">Item Category Name</label>
                </div>
                <div class="form-group col-md-4 col-lg-4">
                    @Html.DisplayFor(model => model.ItemCategoryDetails.CategoryName, new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-lg-offset-2">
                    <button type="submit" class="btn btn-success" onclick="DeleteCategoryPartial()">Delete</button>
                </div>
            </div>
        </div>
    </div>