<script type="text/javascript">
    function ItemNameDeleteRow(id, bndry, count) {
        document.getElementById('ShowItemName').style.display = "none";
        for (var i = 1; i <= bndry; i++) {
            NameDeleteId = "NameDeleteId" + i;
            LabNameDeleteId = "LableNameDeleteId" + i;
            rowid = "RowId" + i;
            if (document.getElementById(NameDeleteId) != null) {
                document.getElementById(NameDeleteId).style.display = "none";
                document.getElementById(LabNameDeleteId).style.display = "inline";
                document.getElementById(rowid).style.backgroundColor = "#defff2";
            }
        }
        document.getElementById("DDLSubCatList").disabled = true;
        document.getElementById("searchbutton").disabled = true;
        document.getElementById("searchtext").disabled = true;
        RowId = "RowId" + count;
        document.getElementById(RowId).style.backgroundColor = "lightgreen";

        confirmbox("Are you sure! You want to delete this Row???", id)

        document.getElementById('pagertextbox').disabled = true;
        document.getElementById('pagerdropdown').disabled = true;
        document.getElementById("pager").style.display = "none";
        $("#NumberOfRows").val(bndry);
        $("#SelectedRowValue").val(count)
    }
</script>


<script type="text/javascript">
    function DeleteItemName() {
        var itmname = {
            Id: $("#ItemNameDetails_Id").val(),
            ItemCategory: $("#ItemNameDetails_ItemCategory").val(),
            ItemSubcategory: $("#ItemNameDetails_ItemSubcategory").val(),
            Name: $("#ItemNameDetails_Name").val(),
            ItemType: $("#ItemNameDetails_ItemType").val(),
        };

        $.ajax({
            url: '/Item/ItemNameDeletePartial',
            contentType: "application/json;charset=utf-8",
            type: "POST",
            data: JSON.stringify(itmname),
            datatype: "json",
            success: function (data) {
                document.getElementById('LoadPartialView').style.display = "none";
                document.getElementById('ShowItemName').style.display = "inline";
                $("#ShowItemName").html(data);
            }
        });

        //this code is used for delete the row in the list  
        var count = document.getElementById("SelectedRowValue").value;
        var rowid = "RowId" + count;
        document.getElementById(rowid).style.display = "none";

        document.getElementById("pager").style.display = "inline";
        document.getElementById("DDLSubCatList").disabled = false;
        document.getElementById("searchbutton").disabled = false;
        document.getElementById("searchtext").disabled = false;
        document.getElementById('pagertextbox').disabled = false;
        document.getElementById('pagerdropdown').disabled = false;
    }
</script>

