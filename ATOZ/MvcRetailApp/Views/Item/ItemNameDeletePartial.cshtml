@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "ItemNameDeletePartial";
}

        @Html.HiddenFor(model=>model.ItemNameDetails.Id)
        @Html.HiddenFor(model=>model.ItemNameDetails.ItemCategory)
        @Html.HiddenFor(model=>model.ItemNameDetails.ItemSubcategory)
        @Html.HiddenFor(model=>model.ItemNameDetails.Name)
        @Html.HiddenFor(model=>model.ItemNameDetails.ItemType)
 
   
<h2><strong>Item Name </strong>Details</h2>
<br />

<div class="col-md-12 col-lg-12">
    <div class="col-md-12 col-lg-12">
        <div class="row">
            <div class="form-group col-md-6 col-lg-6">
                <label for="exampleInputname">Category Code</label>
            </div>
            <div class="form-group col-md-5 col-lg-5">
                @Html.DisplayFor(model => model.ItemNameDetails.ItemCategory)
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6 col-lg-6">
                <label for="exampleInputname">Sub-Category Name</label>
            </div>
            <div class="form-group col-md-5 col-lg-5">
                @Html.DisplayFor(model => model.ItemNameDetails.ItemSubcategory)
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6 col-lg-6">
                <label for="exampleInputname">Item Name</label>
            </div>
            <div class="form-group col-md-5 col-lg-5">
                @Html.DisplayFor(model => model.ItemNameDetails.Name)
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6 col-lg-6">
                <label for="exampleInputname">Item Type</label>
            </div>
            <div class="form-group col-md-5 col-lg-5">
                @Html.DisplayFor(model => model.ItemNameDetails.ItemType)
            </div>
        </div>

        <div class="row">
            <div class="col-lg-offset-4">
                <button type="submit" class="btn btn-success" onclick="DeleteItemName()">Delete</button>
            </div>
        </div>
    </div>
</div>