<script type="text/javascript">
    $(document).ready(function () {
        $("#DDLCategory").change(function () {

            var idModel = $(this).val();
            document.getElementById("DDLCategory").disabled = true;
            document.getElementById("ItemTaxDetails_FromDate").disabled = true;
            document.getElementById("ItemTaxDetails_ToDate").disabled = true;
            document.getElementById("DDLCity").disabled = true;
            document.getElementById("dynamic").style.display = "inline";
