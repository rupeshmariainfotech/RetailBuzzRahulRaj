<script type="text/javascript">
    $(document).ready(function () {

        $("#list").change(function () {
            var idmodel = $(this).val();
            if (idmodel == "") {
                document.getElementById('right_form').style.display = "none";
            }

            else {
                document.getElementById('right_form').style.display = "inline";
                $.ajax({
                    url: '/Lab/GetLabDetails',
                    type: "GET",
                    data: { labCode: idmodel },
                    success: function (data) {
                        if (data != null) {
                            alert(data.labdescription);
                            $("#labName").val(data.Name);
                            $("#labId").val(data.Id);
                            $("#labDescription").val(data.labdescription);
                            document.getElementById("photo").innerHTML = data.logo;
                            $("#fileField").val(data.logo);
                        }
                    },
                    error: function () {
                    }

                });


            }
        });
    });

</script>

