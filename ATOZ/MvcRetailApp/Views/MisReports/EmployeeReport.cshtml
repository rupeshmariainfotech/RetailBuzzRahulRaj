                        </div>
                        <div class="col-lg-3 col-md-3">
                            @Html.DropDownListFor(model => model.EmployeeDetails.department, new SelectList(Model.EmployeeDetails.deptlist, "Name", "Name"), "Select Department", new { @class="form-control" , id="department" })
                        </div>
                        
                    </div>
                </div>

                <br />
