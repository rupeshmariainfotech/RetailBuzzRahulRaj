        </div>
        <div class="col-md-8 col-lg-8">
            @Html.TextBoxFor(model => model.EntryStockItemDetails.ModifiedOn, new { id = "todate", @class = "form-control", @placeholder = "To Date" , @onkeypress="return false" })
        </div>
    </div>
</div>
