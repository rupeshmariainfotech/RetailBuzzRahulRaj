@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "GetPendingTemporaryCashMemoReports";
}

<meta name="keywords" content="Retail Software" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

<!-- Font CSS  -->
<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400,600,700" />
<!-- Core CSS  -->
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />

<!-- Plugin CSS -->
<link rel="stylesheet" type="text/css" href="~/Content/datatables.min.css" />
<link href="//cdn.datatables.net/responsive/1.0.1/css/dataTables.responsive.css" rel="stylesheet" />

<!-- Theme CSS -->
<link rel="stylesheet" type="text/css" href="~/Content/theme.css" />
<script src="@Url.Content("~/Scripts/dataTables.bootstrap.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")"></script>
<link href="http://cdn.datatables.net/plug-ins/a5734b29083/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet" />
<script src="http://cdn.datatables.net/plug-ins/a5734b29083/integration/bootstrap/3/dataTables.bootstrap.js"></script>
<script src="http://cdn.datatables.net/responsive/1.0.1/js/dataTables.responsive.js"></script>

<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#DetailsTable').DataTable({
            responsive: true,
        });
        console.clear();
    });
</script>



<script type="text/javascript">
    function PrintTempCashMemoDetails(id) {
        $.getJSON("/MisReports/EncodeId", { id: id },
        function (encodedvalue) {
            window.open("/MisReports/PrintPendingTemporaryCashMemos?id=" + encodedvalue, "_target", "width=770,height=842,top=100px,left=300px");
        });
    }
</script>

<section>
    <div style="height: 30PX;"></div>
    <div class="col-lg-12 col-md-12 col-sd-12 col-xs-12">
        <div class="col-lg-2 col-md-2"></div>
        <table id="DetailsTable" class="table table-striped table-hover table-condensed col-lg-8 col-md-8 col-sm-8">
            <thead>
                <tr>
                    <th style="text-align: center">Sr.No.</th>
                    <th style="text-align: center">Temp CashMemo No.</th>
                    <th style="text-align: center">Client Name</th>
                    <th style="text-align: center">Sales Person Name</th>
                    <th style="text-align: center">Grand Total</th>
                    <th style="text-align: center">Converted Status</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.TemporaryCashMemoList != null && Model.TemporaryCashMemoList.Any())
                    {
                        int rowid = 1;

                        foreach (var data in Model.TemporaryCashMemoList)
                        {
                    <tr>
                        <td style="text-align: center">@rowid</td>
                        <td style="text-align: center"><a href="#" onclick="PrintTempCashMemoDetails(@data.Id)" style="height:100px; width:300px; ">@data.TempCashMemoNo</a></td>
                        <td style="text-align: center">@data.ClientName</td>
                        <td style="text-align: center">@data.SalesPersonName</td>
                        <td style="text-align: center">@data.GrandTotal</td>
                        @{
                                    
                            if (data.Convertstatus == "InActive")
                            {
                            <td style="text-align: center">Yes</td>
                            }
                            else
                            {
                            <td style="text-align: center">No</td>
                            }
                        }

                        @{
                            rowid += 1;
                        }
                    </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-2 col-md-2"></div>
</section>





