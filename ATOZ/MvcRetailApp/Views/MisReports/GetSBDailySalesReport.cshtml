<!-- Start: Main -->
<section>
    <div class="mainwrapper">
        <div class="col-md-12 col-lg-12">
            <!-- Start: Sidebar -->
            @Html.Partial("../Shared/LeftMenu")

            <!-- Start: Content -->
            <!-- End: Sidebar -->
            <!-- Start: Content -->
            <input type="hidden"/ id="hdnfromdate" name="hdnfromdate">
            <input type="hidden"/ id="hdntodate" name="hdntodate">

            <div class="mainpanel">
                <br />
                <div class="col-md-10 col-lg-10">
                    <h2 class="col-lg-offset-5 col-md-offset-5">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Daily Sales Report</h2>
                </div>
               
                <div class="col-md-12 col-lg-12" id="FromToDateLabelDiv" style="text-align: center">
                    @{
                        var SelectedDate = Session["SelectedDate"].ToString();
                        var ReportDate = Convert.ToDateTime(SelectedDate).ToString("dd/MM/yyyy");
                        <label style='font-size:16px'>Sales Bill Daily Sales Report For @ReportDate</label>
                    }
                </div>

                 <div class="col-md-12 col-lg-12"><div class="row">
                <table border="1" class="table" style="border-collapse: collapse; width: 100%;" cellpadding="0" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#12AEC4"><label style="color:white">Sales Bill<br />No.</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#FB3F8A"><label style="color:white">Tax Free<br />Goods Value</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#EE82EE"><label style="color:white">1% Goods<br />Value</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#65BD77"><label style="color:white">1% VAT<br />Amount</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#E9967A"><label style="color:white">5.5% Goods<br />Value</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#009999"><label style="color:white">5.5% VAT<br />Amount</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#B266FF"><label style="color:white">12.5% Goods<br />Value</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#E65055"><label style="color:white">12.5% VAT<br />Amount</label></th>
                            <th style="text-align: center; color:red; font-size:14px; background-color:#00CC00"><label style="color:white">Grand<br />Total</label></th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            <input type="hidden" id="SBCount" name="SBCount" value="@Model.SalesBillList.Count()"/>
                            
                            int Count = 1;
                            if (Model.SalesBillList != null)
                            {
                                foreach (var data in Model.SalesBillList)
                                {
                                    string billno = "SalesBillNo" + Count;
                                    string taxfreegoods = "TaxFreeGoods" + Count;
                                    string onepergoods = "OnePerGoods" + Count;
                                    string onepervat = "OnePerVAT" + Count;
                                    string fivepergoods = "FivePerGoods" + Count;
                                    string fivepervat = "FivePerVAT" + Count;
                                    string twelevepergoods = "TwelvePerGoods" + Count;
                                    string twelevepervat = "TwelvePerVAT" + Count;
                                    
                                    <tr>
                                        @{
                                            double amt = Convert.ToDouble(@data.GrandTotal);
                                            var grndttl = amt.ToString("#,###.00##");
                                        }
                                        <td><label id="@billno">@data.SalesBillNo</label></td>
                                        <td style="text-align: right;"><label id="@taxfreegoods"></label></td>
                                        <td style="text-align: right;"><label id="@onepergoods"></label></td>
                                        <td style="text-align: right;"><label id="@onepervat"></label></td>
                                        <td style="text-align: right;"><label id="@fivepergoods"></label></td>
                                        <td style="text-align: right;"><label id="@fivepervat"></label></td>
                                        <td style="text-align: right;"><label id="@twelevepergoods"></label></td>
                                        <td style="text-align: right;"><label id="@twelevepervat"></label></td>
                                        <td style="text-align: right;">@grndttl</td>
                                                @{Count++;}
                                    </tr>
                                }
                            }
                            }

                    </tbody>
                    </table>
                     </div></div>

                <div class="col-md-12 col-lg-12">
                    <div class="row">
                        <div class="col-md-10 col-lg-10" style="text-align:right">
                            <label>Total Cash Sales:</label>
                        </div>
                        <div class="col-md-2 col-lg-2" style="text-align:right">
                            <label id="TotalCashSales"></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-lg-10" style="text-align:right">
                            <label>Total Sales Return Amount:</label>
                        </div>
                        <div class="col-md-2 col-lg-2" style="text-align:right">
                            <label id="TotalSalesReturnAmount"></label>
                        </div>
                    </div>
                 </div>

            </div>
