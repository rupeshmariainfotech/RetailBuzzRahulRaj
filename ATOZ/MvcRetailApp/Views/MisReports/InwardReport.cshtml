<script type="text/javascript">
    jQuery(document).ready(function () {

        // Init Theme Core 	  
        Core.init();

        $("select").keypress(function (evt) {
            if (evt.keyCode == 13) {
                iname = $(this).val();
                if (iname !== 'Submit') {
                    var fields =
$(this).parents('form:eq(0),body').find();
                    var index = fields.index(this);
                    if (index > -1 && (index + 1) < fields.length) {
                        fields.eq(index + 1).focus();
                    }
                    return false;
                }
            }
        });
    });
</script>


<!-- Display view using radio button -->
<script type="text/javascript">
    function Report(type) {
        if (type == 'FromSupplier') {
            $.ajax({
                url: "/MisReports/InwardFromSupplier",
                type: "GET",
                success: function (data) {
                    $("#LoadReport").html(data);
                    document.getElementById("InwardRadioBtn2").disabled = 'true';
                    document.getElementById("InwardRadioBtn3").disabled = 'true';
                    document.getElementById("InwardRadioBtn4").disabled = 'true';
                }
            });
        }
        else if (type == 'ToShop') {
            $.ajax({
                url: "/MisReports/InwardToShop",
                type: "GET",
                success: function (data) {
                    $("#LoadReport").html(data);
                    document.getElementById("InwardRadioBtn1").disabled = 'true';
                    document.getElementById("InwardRadioBtn3").disabled = 'true';
                    document.getElementById("InwardRadioBtn4").disabled = 'true';
                }
            });
        }
        else if (type == 'InterShop') {
            $.ajax({
                url: "/MisReports/InwardInterShop",
                type: "GET",
                success: function (data) {
                    $("#LoadReport").html(data);
                    document.getElementById("InwardRadioBtn1").disabled = 'true';
                    document.getElementById("InwardRadioBtn2").disabled = 'true';
                    document.getElementById("InwardRadioBtn4").disabled = 'true';
                }
            });
        }
        else if (type == 'ToGodown') {
            $.ajax({
                url: "/MisReports/InwardToGodown",
                type: "GET",
                success: function (data) {
                    $("#LoadReport").html(data);
                    document.getElementById("InwardRadioBtn1").disabled = 'true';
                    document.getElementById("InwardRadioBtn2").disabled = 'true';
                    document.getElementById("InwardRadioBtn2").disabled = 'true';
                }
            });
        }
    }
</script>

