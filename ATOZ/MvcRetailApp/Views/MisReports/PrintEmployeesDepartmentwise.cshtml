@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "PrintEmployeesDepartmentwise";
}

<script>
    $(document).ready(function () {
        document.getElementById("dpt").innerHTML = window.opener.document.getElementById("selecteddept").value;
    });
</script>

<table style="border: 1px double; width: 100%;">
    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <img src="~/Images/retail-logo.png" class="img-responsive" alt="logo" style="max-width: 100px" />
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <label><b>A To Z DADAR T.T.</b></label><br />
                        <label>Shopping Centre, Dadar T.T., Dadar East,Mumbai - 400014</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center">
                        <label style="font-size: x-large"><b>Employee Report </b></label>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td style="float: right">
                        <label style="font-weight: bold">Department:</label>&nbsp;&nbsp<label id="dpt" style="font-weight: normal"></label></td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table>
                <tr>
                    <td style="height: 5px"></td>
                </tr>
            </table>
            <table border="1" cellpadding="0" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Salary</th>
                        <th>Designation</th>
                        <th>Department</th>
                        <th>Pan No</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Bank Name</th>
                        <th>Branch</th>
                        <th>Account No</th>
                        <th>IFSC No</th>
                    </tr>
                </thead>
                <tbody id="itemlist">
                    @{
                        int rowid = 1;
                    }
                    @foreach (var data in Model.EmpList)
                    {
                        <tr>
                            <td>@rowid</td>
                            <td>@data.EmployeeCode</td>
                            <td>@data.Name</td>
                            <td>@data.Email</td>
                            <td>@data.Salary</td>
                            <td>@data.Designation</td>
                            <td>@data.department</td>
                            <td>@data.PancardNo</td>
                            <td>@data.State</td>
                            <td>@data.City</td>
                            <td>@data.BankName</td>
                            <td>@data.branch</td>
                            <td>@data.Account_No</td>
                            <td>@data.BankIFSCNo</td>
                            @{
                        rowid += 1;
                            }
                        </tr>
                    }
                </tbody>
            </table>

        </td>
    </tr>
</table>

