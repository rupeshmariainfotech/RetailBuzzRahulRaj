@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "PrintMisReports";
}

<h2>MisReports</h2>
<script type="text/javascript">
    $(document).ready(function () {
        document.getElementById("fromdate").innerHTML = window.opener.document.getElementById("FromDate").value;
        document.getElementById("todate").innerHTML = window.opener.document.getElementById("ToDate").value;
    });
</script>
<label>FromDate</label>
&nbsp
    <label id="fromdate"></label>
&nbsp&nbsp&nbsp
    <label>ToDate</label>
<label id="todate"></label>
<br />

<div class="col-lg-12 col-md-6">
    <div class="col-lg-12 col-md-6">
        <table border="1" style="width: 100%">
            <thead>
                <tr id="trlist">
                    <th>
                        <label style="vertical-align: middle; text-align: center; width: 100%;">Sr No</label></th>
                    <th>
                        <label style="vertical-align: middle; text-align: center; width: 100%;">Po No</label></th>
                    <th>
                        <label style="vertical-align: middle; text-align: center; width: 100%;">Delivary Date</label></th>
                    <th>
                        <label style="vertical-align: middle; text-align: center; width: 100%;">Supplier Name</label></th>
                    <th>
                        <label style="vertical-align: middle; text-align: center; width: 100%;">Email</label></th>
                    <th>
                        <label style="vertical-align: middle; text-align: center; width: 100%;">Delivary At.</label></th>
                    <th>
                        <label style="vertical-align: middle; text-align: center; width: 100%;">Amount </label>
                    </th>

                </tr>
            </thead>
            <tbody>
                @if (Model.PurchaseList != null && Model.PurchaseList.Any())
                {

                    foreach (var item in Model.PurchaseList)
                    {
                    <tr>
                        <td>
                            <label style="text-align: center; width: 100%; font-weight: normal;" id="idvalue">@Html.DisplayFor(modelitem => item.PoId)</label></td>
                        <td>
                            <label style="text-align: center; width: 100%; font-weight: normal;">@Html.DisplayFor(modelItem => item.PoNo)</label></td>
                        <td>
                            <label style="text-align: center; width: 100%; font-weight: normal;">@item.DelDate.ToShortDateString()</label></td>
                        <td>
                            <label style="text-align: center; width: 100%; font-weight: normal;">@Html.DisplayFor(modelItem => item.SupplierName)</label></td>
                        <td>
                            <label style="text-align: center; width: 100%; font-weight: normal;">@Html.DisplayFor(modelItem => item.SupplierEmail)</label></td>
                        <td>
                            <label style="text-align: center; width: 100%; font-weight: normal;">@Html.DisplayFor(modelItem => item.DelAt)</label></td>
                        <script type="text/javascript">
                            @{
                        var i = @item.GrandTotal;
                        double y = Convert.ToDouble(i);
                        var bob = y.ToString("#,###.00##");
                                                           }
                        </script>
                        <td>
                            <label style="font-weight: normal">@bob</label></td>
                    </tr>
                    }
                }

            </tbody>
        </table>
        <div style="height: 15px"></div>
    </div>
</div>

