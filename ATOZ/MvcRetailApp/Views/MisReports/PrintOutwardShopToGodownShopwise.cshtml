@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "PrintOutwardShopToGodownShopwise";
}


<script type="text/javascript">
    $(document).ready(function () {
       
        document.getElementById("FromDate").innerHTML = window.opener.document.getElementById("fromdate").value;
        document.getElementById("ToDate").innerHTML = window.opener.document.getElementById("todate").value;
        document.getElementById("ShopName").innerHTML = window.opener.document.getElementById("DDLShop").value;
    });
</script>

<table style="border: 1px double; width: 100%;">
    <tr>
        <td>
            <table width="100%">
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <img src="~/Images/retail-logo.png" class="img-responsive" alt="logo" style="max-width: 100px" />
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <label><b>A To Z DADAR T.T.</b></label><br />
                        <label>Shopping Centre, Dadar T.T., Dadar East,Mumbai - 400014</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align:center">
                        <label style="font-size: x-large"><b>Outward To Godown Shopwise Report </b></label>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td style="float:right"><label style="font-weight:bold">Date:</label>&nbsp;&nbsp<label id="FromDate" style="font-weight: normal"></label>&nbsp;&nbsp;To&nbsp;&nbsp;<label id="ToDate" style="font-weight: normal"></label></td>
                </tr>
                <tr><td><div style="height:7px"></div></td></tr>
                <tr>
                    <td><label style="font-weight:bold">Shop Name:</label><label style="font-weight:normal" id="ShopName"></label></td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table>
                <tr>
                    <td style="height: 5px"></td>
                </tr>
            </table>
            <table border="1" cellpadding="0" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Outward No.</th>
                        <th>Outward Date</th>
                        <th>Emp Name</th>
                        <th>Emp Email</th>
                        <th>StoreKeeper Name</th>
                        <th>Godown Name</th>
                    </tr>
                </thead>
                <tbody id="itemlist">
                    @{
                        int rowid = 1;
                    }
                    @foreach (var data in Model.OutwardShopToGodownList)
                    {
                        <tr>
                            @{
                                var date = Convert.ToDateTime(@data.Date).ToShortDateString();
                            }
                            <td>@rowid</td>
                            <td>@data.OutwardCode</td>
                            <td>@date</td>
                            <td>@data.PreparedBy</td>
                            <td>@data.PreparedEmail</td>
                            <td>@data.StoreKeeperName</td>
                            <td>@data.GodownName</td>
                            @{
                                rowid += 1;
                            }
                        </tr>
                                }
                </tbody>
            </table>

        </td>
    </tr>
</table>