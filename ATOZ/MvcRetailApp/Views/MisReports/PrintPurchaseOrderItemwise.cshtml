@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "PrintPurchaseOrderItemwise";
}

<script type="text/javascript">
    $(document).ready(function () {
        document.getElementById("FromDate").innerHTML = window.opener.document.getElementById("fromdate").value;
        document.getElementById("ToDate").innerHTML = window.opener.document.getElementById("todate").value;
    })

</script>

<table style="border: 1px double; width: 100%;">
    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <img src="~/Images/retail-logo.png" class="img-responsive" alt="logo" style="max-width: 100px" />
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <label><b>A To Z DADAR T.T.</b></label><br />
                        <label>Shopping Centre, Dadar T.T., Dadar East,Mumbai - 400014</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center">
                        <label style="font-size: x-large"><b>Purchase Order Report</b></label>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td style="float: right">
                        <label style="font-weight: bold">Date:</label>&nbsp;&nbsp<label id="FromDate" style="font-weight: normal"></label>&nbsp;&nbsp;To&nbsp;&nbsp;<label id="ToDate" style="font-weight: normal"></label></td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <label style="font-weight: bold">&nbsp;Item Details:</label>
            <table>
                <tr>
                    <td style="height: 5px"></td>
                </tr>
            </table>
            <table border="1" cellpadding="0" cellspacing="0" style="width: 100%">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>PO No.</th>
                        <th>PoDate</th>
                        <th>Supplier Name</th>
                        <th>Supplier ContactNo</th>
                        <th>Shop Name</th>
                        <th>PackAndForwd</th>
                        <th>Total Amount</th>
                        <th>GrandTotal</th>

                    </tr>
                </thead>
                <tbody id="itemlist">
                    @{
                        int rowid = 1;
                    }
                    @foreach (var data in Model.PurchaseOrderList)
                    {
                        <tr>
                            @{
                        double amt = Convert.ToDouble(@data.GrandTotal);
                        var amount = amt.ToString("#,###.00##");
                            }
                            <td>@rowid</td>
                            <td style="text-align: left">@data.PoNo</td>
                            <td style="text-align: left">@data.PoDate</td>
                            <td style="text-align: left">@data.SupplierName</td>
                            <td style="text-align: left">@data.SupplierContactNo</td>
                            <td style="text-align: left">@data.ShopName</td>
                            <td style="text-align: left">@data.PackAndForwd</td>
                            <td style="text-align: right">@data.TotalAmount</td>
                            <td style="text-align: right">@amount</td>
                            @{rowid += 1;}
                        </tr>
                    }
                </tbody>
            </table>
        </td>
    </tr>
</table>

