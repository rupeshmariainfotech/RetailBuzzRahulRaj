                    <div class="col-md-12 col-lg-12 form-group">
                        <div class="row">
                            <label style="font-size: 18px">Salesman Person Details</label><br />
                        </div>

                        <div style="height: 12px"></div>
                        <div class="col-lg-12 col-md-12">
                            <div class="col-lg-3 col-md-3">
                                <label>Name: &nbsp;</label><br />
                                <label style="font-weight: normal">@Html.DisplayFor(model => model.OutwardShopToGodownDetails.SalesmanName)</label>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <label>Designation: &nbsp;</label><br />
                                <label style="font-weight: normal">@Html.DisplayFor(model => model.OutwardShopToGodownDetails.SalesmanDesignation)</label>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <label>Contact No: &nbsp;</label><br />
                                <label style="font-weight: normal">@Html.DisplayFor(model => model.OutwardShopToGodownDetails.SalesmanContactNo)</label>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <label>Email: &nbsp;</label><br />
                                <label style="font-weight: normal">@Html.DisplayFor(model => model.OutwardShopToGodownDetails.SalesmanEmail)</label>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12 col-lg-12 form-group">
                        <div style="height: 15px"></div>
                        <div class="col-lg-10 col-md-10"></div>
                        <div class="col-md-2 col-lg-2">
                            <label>Prepared By</label><br />
                            <label style="font-weight: normal">@Html.DisplayFor(model => model.OutwardShopToGodownDetails.PreparedBy)</label>
                        </div>
                        <div style="height: 25px"></div>
                    </div>

                    @{
    if (Model.OutwardShopToGodownDetails.Narration != null)
    { 
                        <div class="col-lg-12 col-md-12">
                            <div class="col-lg-2 col-md-2">
                                <label style="font-size: 14px">Narration</label>
                            </div>
                            <div class="col-lg-10 col-md-10">
                                @Html.DisplayFor(model => model.OutwardShopToGodownDetails.Narration)
                            </div>
                        </div>
    }
                    }
                </div>
            </td>
        </tr>
    </table>

    <div style="height: 10px"></div>

    <div style="text-align: center">
        <button type="button" id="Delete" class="btn btn-danger">Delete</button>
        <button type="submit" id="delete" style="display: none" class="btn btn-primary">Delete</button>
    </div>
}