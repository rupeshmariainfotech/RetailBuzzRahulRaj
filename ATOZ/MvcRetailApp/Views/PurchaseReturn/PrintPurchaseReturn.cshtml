@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "PrintPurchaseReturn";
}
<link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css" />
<table style="border: 1px double; width: 100%;">
    <tr>
        <td>
            <table style="width: 100%">
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <img src="~/Images/retail-logo.png" class="img-responsive" alt="logo" style="max-width: 100px;" />
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center;">
                        <label><b>A To Z DADAR T.T.</b></label><br />
                        <label>Shopping Centre, Dadar T.T., Dadar East,Mumbai - 400014</label>
                    </td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center">
                        <label style="font-size: x-large;"><b>Purchase Return</b></label>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td>
            <table style="border: 1px double; width: 100%">

                <tr>
                    <td style="width: 34%;">
                        <label style="font-size: larger; font-weight: bold">Supplier Details:</label><br />
                        <label><b>Name: &nbsp</b></label>@Html.DisplayFor(model => model.PurchaseReturnDetails.SupplierName)<br />
                        <label><b>Contact Number: &nbsp</b></label>@Html.DisplayFor(model => model.PurchaseReturnDetails.SupplierContact)<br />
                        @{
                            if (Model.PurchaseReturnDetails.PoNo != "NoPO")
                            {
                            <label><b>PoNo: &nbsp</b></label>@Html.DisplayFor(model => model.PurchaseReturnDetails.PoNo)<br />
                            }
                        }
                    </td>
                    <td style="width: 15%;"></td>
                    <td style="width: 51%; position: absolute; margin-top: 0px;">
                        <table style="width: 100%;">
                            <tr>
                                <td><b>Date: &nbsp</b></td>
                                <td>
                                    @{
                                        string date = DateTime.Now.ToString("dd/MM/yyyy");
                                    }
                                    <label id="date" style="font-weight: normal">@date</label>
                                </td>
                            </tr>
                            <tr>
                                <td><b>Purchase Return No. : &nbsp</b></td>
                                <td>
                                    <label style="font-weight: normal">@Html.DisplayFor(model => model.PurchaseReturnDetails.PurchaseReturnNo)</label>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>

            </table>
        </td>
    </tr>

    <tr>
        <td>
            <div style="height: 15px"></div>
        </td>
    </tr>

    <tr>
        <td>
            <label style="font-size: large"><b>Item Details</b></label>
            <div class="form-group row">
                <table border="1" style="border-collapse: collapse; width: 100%;" cellpadding="0" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="text-align: center">
                                <label>S.No.</label>
                            </th>
                            <th style="text-align: center">
                                <label>Item</label>
                            </th>
                            <th style="text-align: center">
                                <label>Description</label>
                            </th>
                            <th style="text-align: center">
                                <label>Material</label>
                            </th>
                            <th style="text-align: center">
                                <label>Color</label>
                            </th>
                            <th style="text-align: center">
                                <label>Design</label>
                            </th>
                            <th style="text-align: center">
                                <label>Qty</label>
                            </th>
                            <th style="text-align: center">
                                <label>Unit</label>
                            </th>
                            <th style="text-align: center">
                                <label>
                                    Rate<br />
                                    (<i class="fa fa-inr"></i>)</label>
                            </th>
                            <th style="text-align: center">
                                <label>
                                    Disc<br />
                                    (%)</label>
                            </th>
                            <th style="text-align: center">
                                <label>
                                    Amt<br />
                                    (<i class="fa fa-inr"></i>)</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.PurchaseReturnItemList != null && Model.PurchaseReturnItemList.Any())
                            {
                                int count = 1;
                                foreach (var data in Model.PurchaseReturnItemList)
                                {
                                    if (data.Quantity != 0)
                                    {                                                                          
                            <tr>
                                @{
                                        string rate = Convert.ToDouble(data.CostPrice).ToString("#,###.00##");
                                        string amt = Convert.ToDouble(data.Amount).ToString("#,###.00##");
                                }
                                <td style="text-align: left">@count</td>
                                <td style="text-align: left">
                                    <label style="font-weight: normal">&nbsp;@data.ItemName</label>
                                </td>
                                <td style="text-align: left">
                                    <label style="font-weight: normal">&nbsp;@data.Description</label>
                                </td>
                                <td style="text-align: left">
                                    <label style="font-weight: normal">&nbsp;@data.Material</label>
                                </td>
                                <td style="text-align: left">
                                    <label style="font-weight: normal">&nbsp;@data.Color</label>
                                </td>
                                <td style="text-align: left">
                                    <label style="font-weight: normal">&nbsp;@data.DesignName</label>
                                </td>
                                <td style="text-align: right">
                                    <label style="font-weight: normal">@data.Quantity&nbsp;</label>
                                </td>
                                <td style="text-align: left">
                                    <label style="font-weight: normal">&nbsp;@data.Unit</label>
                                </td>
                                <td style="text-align: right">
                                    <label style="font-weight: normal">@rate&nbsp;</label>
                                <td style="text-align: right">
                                    <label style="font-weight: normal">@data.DisPer&nbsp;</label>
                                <td style="text-align: right">
                                    <label style="font-weight: normal">@amt&nbsp;</label>
                            </tr>
                                        count++;
                                    }
                                }
                            }
                        }

                    </tbody>
                </table>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div style="height: 10px"></div>
        </td>
    </tr>
    <tr>
        <td style="text-align: right">
            <table style="width: 100%">
                <tr>
                    <td>
                        <label style="font-size: 17px;"><b>Grand total : &nbsp</b></label>
                        <i class="fa fa-inr"></i><b>@Convert.ToDouble(Model.PurchaseReturnDetails.DebitNoteAmount).ToString("#,###.00##")</b>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
