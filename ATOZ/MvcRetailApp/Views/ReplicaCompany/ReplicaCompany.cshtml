<script type="text/javascript">
    function alertbox(message) {
        var sample = document.getElementById("audio");
        sample.src = '../../Audio/tone1.ogg';

        sample.load();
        sample.muted = false;
        sample.play();

        bootbox.classes('alertClass');
        bootbox.alert('<i class="fa fa-2x fa-warning"></i><br>' + message + '<hr>');
    }
</script>

<script type="text/javascript">
    $(function () {
        $("#Create").click(function () {
            if ($("#CompanyNameWithFinancial").val() == "") {
                alertbox("Please Select The Company");
                return false;
            }
            else {
                setTimeout(function () {
                    document.getElementById("Create").disabled = true;
                }, 100);
            }
        });
    });
</script>
<!-- Start: Header -->
@Html.Partial("../Shared/Header")
<!-- End: Header -->
<!-- Start: Main -->
<section>
    <div class="mainwrapper">
        <!-- Start: Sidebar -->
        <audio id="audio" muted="true" preload="auto" style="display: none" controls="controls" autoplay="false">
            <source src="" type="audio/ogg" />
        </audio>
        @using (Html.BeginForm("ReplicaCompany", "ReplicaCompany", FormMethod.Post))
        {
            
            <div class="mainpanel">
                <div class="col-md-12 col-lg-12">
                    <h2><strong>Company</strong> Details</h2>
                    <div class="col-md-12 col-lg-12">
                        <div class="row">
                            <div class="col-md-4 col-lg-4">
                                <label>Select Company</label>
                                <select id="CompanyNameWithFinancial" name="CompanyNameWithFinancial" class="form-control">
                                    <option value="">Select</option>
                                    @{
            string[] companynames = TempData["NewCompanyNames"] as string[];
            string[] companycodes = TempData["NewCompanyCodes"] as string[];
            int Count = Convert.ToInt32(TempData["ArrayCount"]);
            for (int i = 0; i < Count; i++)
            {
                                        <option value="@companycodes[i] @companynames[i]">@companynames[i]</option>
            }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <button type="submit" id="Create" class="btn btn-success col-md-offset-6 col-lg-offset-6">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
