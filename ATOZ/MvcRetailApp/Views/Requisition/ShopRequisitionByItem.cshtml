<script type="text/javascript">
    $(function () {
       
        $("#RequisitionForShopDetails_ItemName").autocomplete({
            source: "/Requisition/GetItemNames",
            minLength: 1,
            select: function (event, ui) {
                if (ui.item) {
                    $("#RequisitionForShopDetails_ItemName").val(ui.item.value);
                  
                    var itemname = $("#RequisitionForShopDetails_ItemName").val();
                    $.ajax({
                        url: "/Requisition/getItemReport",
                        data: { itemname: itemname },
                        type: "GET",
                        success: function (data) {
                            $("#showpartial").html(data);
                         
                        }
                    });
                }
            }
        });
    });
</script>

