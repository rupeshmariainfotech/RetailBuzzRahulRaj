<script type="text/javascript">
    $(function () {
       
        new JsDatePick({
            useMode: 2,
            target: "fromdate",
            dateFormat: "%d/%M/%Y"
        });

        new JsDatePick({
            useMode: 2,
            target: "todate",
            dateFormat: "%d/%M/%Y"
        });

    });
</script>

<script type="text/javascript">
    $(function () {
       
        $("#RequisitionOfPoDetails_ItemName").autocomplete({
            source: "/Requisition/GetItemNamesForPo",
            minLength: 1,
            select: function (event, ui) {
                if (ui.item) {
                    $("#RequisitionOfPoDetails.ItemName").val(ui.item.value);
                }
            }
        });
    });
        </script>

<script type="text/javascript">
    function GetData() {
     
        var itemname = $("#RequisitionOfPoDetails_ItemName").val();
        var fromdate = document.getElementById("fromdate").value;
        var todate = document.getElementById("todate").value;
        if (todate != "") {
            $.ajax({
                url: '/Requisition/GetItemDetailsByItemNameandDateForPo',
                type: "GET",
                data: { Itemname: itemname, FromDate: fromdate, ToDate: todate },
                success: function (data) {
                    $("#showpartial").html(data);
                    document.getElementById("mainrequisition").style.display = "none";
                    document.getElementById("save").style.display = "none";
                }
            });
        }
    }
</script>


