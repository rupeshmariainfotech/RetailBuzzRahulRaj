<script type="text/javascript">
    function Requisition(type) {
        if (type == 'Godown') {
            $.ajax({
                url: "/Requisition/ShopRequisitionForGodown",
                type: "GET",
                success: function (data) {
                    $("#LoadRequisition").html(data);
                }
            });
        }
        else {
            $.ajax({
                url: "/Requisition/ShopRequisitionForPO",
                type: "GET",
                success: function (data) {
                    $("#LoadRequisition").html(data);
                }
            });
        }
    }
</script>
