@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "getItemReport";
}
<script src="@Url.Content("~/Scripts/jquery.tablesorter.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.pager.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("table.tablesorter").tablesorter({ widthFixed: true, sortList: [[0, 0]] })
       .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
    });
</script>
 <div class="col-md-12 col-lg-12" id="AddingRows">

 <table class="tablesorter table" style="border: 1px double; border: outset";  >
                    <thead>
                        <tr>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center" >
                                                                    <label>S.N.</label></th>
                                                                 <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">ItemCode</label></th>
                                                                  <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">Shop/GodownName</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">Item</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="DescriptionHeadings">Description</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="DescriptionHeadings">Quantity</label></th>
                                                               <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="DescriptionHeadings">Unit</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">Size</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">Rate</label></th>
                    </tr>
                    </thead>
                     
                   <tbody> @{ 
                       int count = 1;
                       if (Model.ShopStockList != null && Model.ShopStockList.Any())
                       {
                           int countvalue = 1;
                           foreach (var item in Model.ShopStockList)
                           {
                               string itemname = "itemname" + count;
                               string itemcode = "itemcode" + count;
                               string itemdescription = "itemdescription" + count;
                               string itemquantity = "itemquantity" + count;
                               string requiredquantity = "requiredquantity" + count;
                                                                        <tr >
                                                                        <td style="text-align:center">@countvalue</td>
                                                                        <td style="text-align:center">@item.ItemCode<input type="hidden" id="@itemcode" name="@itemcode" value="@Model.ShopStockDetails.ItemCode" /></td>
                                                                        <td style="text-align:center">@item.ShopName<input type="hidden" id="@itemcode" name="@itemcode" value="@Model.ShopStockDetails.ItemCode" /></td>
                                                                        <td style="text-align:center">@item.ItemName<input type="hidden" id="@itemname" name="@itemname" value="@Model.ShopStockDetails.ItemName" /></td>
                                                                        <td style="text-align:center">@item.Description<input type="hidden" id="@itemdescription" name="@itemdescription" value="@Model.ShopStockDetails.Description" /> </td>
                                                                        <td style="text-align:center">@item.Quantity<input type="hidden" id="@itemcode" name="@itemcode" value="@Model.ShopStockDetails.ItemCode" /></td>
                                                                        <td style="text-align:center">@item.Unit<input type="hidden" id="@itemname" name="@itemname" value="@Model.ShopStockDetails.ItemName" /></td>
                                                                        <td style="text-align:center">@item.Size<input type="hidden" id="@itemdescription" name="@itemdescription" value="@Model.ShopStockDetails.Description" /> </td>
                                                                        <td style="text-align:center">@item.SellingPrice<input type="hidden" id="@itemdescription" name="@itemdescription" value="@Model.ShopStockDetails.Description" /> </td>
                                                                       
                                                                        
