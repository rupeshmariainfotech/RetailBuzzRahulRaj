@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "GetItemDetailsByItemNameandDate";
}

<script src="@Url.Content("~/Scripts/jquery.tablesorter.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tablesorter.pager.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("table.tablesorter").tablesorter({ widthFixed: true, sortList: [[0, 0]] })
       .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
    });
</script>
<div class="col-md-12 col-lg-12" id="AddingRows">
 <table class="tablesorter table" style="border: 1px double; border: outset"; >
                    <thead>
                        <tr>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center" >
                                                                    <label>S.N.</label></th>
                                                               <th class="col-md-1 col-lg-1" style="text-align:center" >
                                                                    <label>ItemCode</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">Shop/GodownName</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">Item</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="DescriptionHeadings">Description</label></th>
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="DescriptionHeadings">Quantity</label></th>
                                                           
                                                                <th class="col-md-1 col-lg-1" style="text-align:center">
                                                                    <label id="Headings">Rate</label></th>
                    </tr>
                    </thead>

     <tbody>
         @{
             if (Model.ShopStockList != null && Model.ShopStockList.Any())
             {
                 int countvalue = 1;
                 foreach (var item in Model.ShopStockList)
                 {
                     <tr>

                         <td style="text-align:center">@countvalue</td>
                         <td style="text-align:center">@item.ItemCode</td>
                         <td style="text-align:center">@item.ShopName</td>
                         <td style="text-align:center">@item.ItemName</td>
                         <td style="text-align:center">@item.Description</td>
                         <td style="text-align:center">@item.Quantity</td>
                       
                         <td style="text-align:center">@item.SellingPrice</td>
                     </tr>
                     countvalue = countvalue + 1;

                 }
                 foreach (var item in Model.GodownStockList)
                 {
                     <tr>

                         <td style="text-align:center">@countvalue</td>
                         <td style="text-align:center">@item.ItemCode</td>
                          <td style="text-align:center">@item.GodownName</td>
                         <td style="text-align:center">@item.ItemName</td>
                         <td style="text-align:center">@item.Description</td>
                         <td style="text-align:center">@item.Quantity</td>
                        
                         <td style="text-align:center">@item.SellingPrice</td>
                     </tr>
                     countvalue = countvalue + 1;

                 }
             }
             }

     </tbody>


                                                        </table>
     </div>
<div id="pager" style="text-align:center ;width:100%">
                    <form>
                        <img src="../Images/first.png" class="first" />
                        <img src="../Images/prev.png" class="prev" />
                        <input type="text" class="pagedisplay" id="pagertextbox" style="width: 170px" />
                        <img src="../Images/next.png" class="next" />
                        <img src="../Images/last.png" class="last" />
                        <select class="pagesize" id="pagerdropdown">
                            <option selected="selected" value="5">5</option>
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="30">30</option>
                            <option value="40">40</option>
                        </select>
                    </form>
                </div>  