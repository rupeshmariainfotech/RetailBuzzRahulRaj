<script type="text/javascript">
    $(document).ready(function () {
        $("#SalesBillDetails_SalesBillNo").focus();
        $("#SalesBillDetails_SalesBillNo").autocomplete({
            source: "/SalesBill/GetAllSalesBillNo",
            minLength: 1,
            select: function (event, ui) {
                if (ui.item) {
                    $("#SalesBillDetails_SalesBillNo").val(ui.item.value);
                    var billno = $("#SalesBillDetails_SalesBillNo").val();
                    $.ajax({
                        url: "/SalesBill/GetSalesBillForPrint",
                        data: { billno: billno },
                        type: "GET",
                        success: function (data) {
                            $("#LoadSalesBill").html(data);
                        }
                    });
                }
            }
        });
    });
</script>
