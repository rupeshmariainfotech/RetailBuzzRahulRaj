                                                    </div>
                                                </div>
                                                <div class="form-group col-md-1 col-lg-1">
                                                    <div class="row">
                                                        @Html.TextBoxFor(model => model.SalesIncentiveDetails.Percentage, new { @placeholder = "FixRate", @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.SalesIncentiveDetails.Percentage, null, new { style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <br />

