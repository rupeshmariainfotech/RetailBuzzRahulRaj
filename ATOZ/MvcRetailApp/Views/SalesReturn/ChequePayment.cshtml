@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "ChequePayment";
}

<link href="@Url.Content("~/Content/themes/base/jsDatePick_ltr.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jsDatePick_ltr.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jsDatePick.jquery.min.1.3.js")"></script>
<script src="@Url.Content("~/Scripts/jsDatePick.min.1.3.js")"></script>

@*DATE PICKER ON CHECK DATE*@
<script type="text/javascript">
    window.onclick = function () {
        new JsDatePick({
            useMode: 2,
            target: "CashierReceivableDetails_ChequeDate",
            dateFormat: "%d/%M/%Y",
        });
    };
</script>

<div class="col-lg-12 col-md-12">

    <table style="border: 1px double; width: 100%">
        <tr>
            <td>
                <div style="height: 3px" class="form-group"></div>
            </td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td class="col-lg-3 col-md-3">
                <label>Cheque No.<i style="color: red">*</i></label><br />
                @Html.TextBoxFor(model => model.CashierReceivableDetails.ChequeNo, new { @autocomplete = "off", @class = "form-control", @placeholder = "Check No", })
            </td>
            <td class="col-lg-3 col-md-3">
                <label>Account No.<i style="color: red">*</i></label><br />
                @Html.TextBoxFor(model => model.CashierReceivableDetails.ChequeAccNo, new { @autocomplete = "off", @class = "form-control", @placeholder = "Account No" })
            </td>
            <td class="col-lg-3 col-md-3">
                <label>Amount<i style="color: red">*</i></label><br />
                @Html.TextBoxFor(model => model.CashierReceivableDetails.ChequeAmount, new { @autocomplete = "off", @class = "form-control", @placeholder = "Amount", @onkeypress = "return AllowNumbers(event)" })
            </td>
            <td class="col-lg-3 col-md-3">
                <label>Date<i style="color: red">*</i></label><br />
                @Html.TextBoxFor(model => model.CashierReceivableDetails.ChequeDate, new { @autocomplete = "off", @class = "form-control", @placeholder = "Date" })
            </td>
        </tr>
        <tr>
            <td>
                <div style="height: 3px" class="form-group"></div>
            </td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td class="col-lg-3 col-md-3">
                <label>Bank<i style="color: red">*</i></label><br />
                @Html.TextBoxFor(model => model.CashierReceivableDetails.ChequeBank, new { @autocomplete = "off", @class = "form-control", @placeholder = "Bank Name" })
            </td>
            <td class="col-lg-3 col-md-3">
                <label>Branch<i style="color: red">*</i></label><br />
                @Html.TextBoxFor(model => model.CashierReceivableDetails.ChequeBranch, new { @autocomplete = "off", @class = "form-control", @placeholder = "Branch Name" })
            </td>
            <td class="col-lg-3 col-md-3"></td>
            <td class="col-lg-3 col-md-3"></td>
        </tr>
        <tr>
            <td>
                <div style="height: 3px" class="form-group"></div>
            </td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
    <br />
    <div style="height: 10px"></div>
</div>

