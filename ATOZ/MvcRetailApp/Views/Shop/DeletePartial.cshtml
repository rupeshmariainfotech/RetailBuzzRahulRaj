@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "DeletePartial";
}

@Html.HiddenFor(model => model.ShopDetails.ShopId)
@Html.HiddenFor(model => model.ShopDetails.EmpDesignation)
@Html.HiddenFor(model => model.ShopDetails.EmpEmail)
@Html.HiddenFor(model => model.ShopDetails.EmpName)
@Html.HiddenFor(model => model.ShopDetails.ShopAddress)
@Html.HiddenFor(model => model.ShopDetails.ShopCode)
@Html.HiddenFor(model => model.ShopDetails.ShopContactNo)
@Html.HiddenFor(model => model.ShopDetails.ShopDescription)
@Html.HiddenFor(model => model.ShopDetails.ShopEmail)
@Html.HiddenFor(model => model.ShopDetails.ShopName)
@Html.HiddenFor(model => model.ShopDetails.ShortCode)

<div class="row form-group">
    <h2>Shop Details</h2>
    <div class="col-lg-12 col-md-12">
        <label>Shop Code : </label>
        @Html.DisplayFor(model => model.ShopDetails.ShopCode)
    </div>
</div>

<div class="row">
    <div class="row form-group">
        <div class="col-lg-12 col-md-12">
            <div class="col-md-3 col-lg-3">
                <label>Shop Name</label><br />
                @Html.DisplayFor(model => model.ShopDetails.ShopName, new { @class = "form-control" })
            </div>

            <div class="col-md-3 col-lg-3">
                <label>Shop Address</label><br />
                @Html.DisplayFor(model => model.ShopDetails.ShopAddress, new { @class = "form-control" })
            </div>

            <div class="col-md-3 col-lg-3">
                <label>Shop Email</label><br />
                @Html.DisplayFor(model => model.ShopDetails.ShopEmail, new { @class = "form-control" })
            </div>

            <div class="col-md-3 col-lg-3">
                <label>Employee Designation</label><br />
                @Html.DisplayFor(model => model.ShopDetails.EmpDesignation)
            </div>

        </div>
    </div>
    <br />
    <br />

    <div class="row form-group">
        <div class="col-lg-12 col-md-12">
            <div class="col-md-3 col-lg-3">
                <label>Shop Description</label><br />
                @{
                    if (Model.ShopDetails.ShopDescription != null)
                    { 
                    @Html.DisplayFor(model => model.ShopDetails.ShopDescription)        
                    }
                    else
                    {
                    <div style="text-align: center">
                        <label>----</label>
                    </div>
                    }                    
                }

            </div>

            <div class="col-md-3 col-lg-3">
                <label>Contact No</label><br />
                @Html.DisplayFor(model => model.ShopDetails.ShopContactNo, new { @class = "form-control" })
            </div>

            <div class="col-md-3 col-lg-3">
                <label>Employee Name</label><br />
                @Html.DisplayFor(model => model.ShopDetails.EmpName, new { @class = "form-control" })
            </div>
            <div class="col-md-3 col-lg-3">
                <label>Employee Email</label><br />
                @Html.DisplayFor(model => model.ShopDetails.EmpEmail)
            </div>
        </div>
    </div>

    <br />
    <br />

    <div class="row form-group">
        <div class="col-lg-12 col-md-12">
            <div class="col-md-3 col-lg-3">
                <label>Short Code</label><br />
                @Html.DisplayFor(model => model.ShopDetails.ShortCode)
            </div>
            <div class="col-lg-9 col-md-9"></div>
        </div>
    </div>

    <br />
    <br />


    <div class="col-lg-offset-5 col-md-offset-5">
        <button type="button" class="btn btn-success" id="delete" onclick="DeleteData()">Delete</button>
    </div>
</div>
