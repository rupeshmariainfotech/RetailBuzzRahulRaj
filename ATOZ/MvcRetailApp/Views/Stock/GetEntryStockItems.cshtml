@model CodeFirstEntities.MainApplication
@{
    ViewBag.Title = "GetEntryStockItems";
}


<div style="border:1px solid;">
    <div class="row">
        <div style="height: 10px"></div>

        <div class="col-md-12 col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align:center">Sr.No.</th>
                        <th style="text-align:center">Category</th>
                        <th style="text-align:center">Sub-Category</th>
                        <th style="text-align:center">Item Code</th>
                        <th style="text-align:center">Item Name</th>
                        <th style="text-align:center">Description</th>
                        <th style="text-align:center">SellingPrice</th>
                        <th style="text-align:center">M.R.P.</th>
                        <th style="text-align:center" class="col-lg-1 col-md-1">Quantity</th>
                        <th style="text-align:center">Unit</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int rowid = 1;
                        
                        //display entry stock item list..
                        if (Model.EntryStockItemList != null && Model.EntryStockItemList.Any())
                        {
                            foreach (var item in Model.EntryStockItemList)
                            {
                                string quantity = "Quantity" + rowid;
                                <tr>
                                    @{
                                        double sellingprice = Convert.ToDouble(@item.SellingPrice);
                                        var sellingprc = sellingprice.ToString("#,###.00##");
                                        double mrp = Convert.ToDouble(@item.MRP);
                                        var MRP = mrp.ToString("#,###.00##");
                                        var qty = @item.TotalQuantity;
                                    }
                                    <td style="text-align:center">@rowid</td>
                                    <td style="text-align:center">@item.Category</td>
                                    <td style="text-align:center">@item.SubCategory</td>
                                    <td style="text-align:center">@item.ItemCode</td>
                                    <td style="text-align:center">@item.Item</td>
                                    <td style="text-align:center">@item.Description</td>
                                    <td style="text-align:right">@sellingprc</td>
                                    <td style="text-align:right">@MRP</td>
                                    <td><input type="text" value="@qty" class="form-control" id="@quantity" name="@quantity" style="text-align:center"/></td>
                                    <td style="text-align:center">@item.Unit</td>
                                </tr>
                                rowid++;
                        }
                    }
                    }

                </tbody>
            </table>
        </div>
        <div style="height: 10px"></div>
    </div>
</div>
