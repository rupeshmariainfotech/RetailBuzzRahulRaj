@model CodeFirstEntities.MainApplication

@{
    ViewBag.Title = "GetStockTakingItems";
}

<script type="text/javascript">
    function AllowNumbers(key) {
        var keycode = (key.which) ? key.which : key.keyCode;
        if (!(keycode == 8 || keycode == 46) && (keycode < 48 || keycode > 57)) {
            return false;
        }
    }
</script>

<input type="hidden" id="temp" name="temp" value="@TempData["type"]" />

@{
    if (TempData["type"] == "shop")
    {
    <label>Shop Code : </label>
        int count = 1;
        foreach (var item in Model.ShopStockList)
        {
            if (count == 1)
            { 
    <label style="font-weight: normal">@item.ShopCode</label>
            }
            count++;
        }

    <div style="border: 1px solid;">
        <div class="row">
            <div style="height: 10px"></div>

            <div class="col-md-12 col-lg-12">

                <table class="table">
                    <thead>
                        <tr>
                            <th style="text-align: center">Sr.No.</th>
                            <th style="text-align: center">Item Code</th>
                            <th style="text-align: center">Item Name</th>
                            <th style="text-align: center">Material</th>
                            <th style="text-align: center">Brand</th>
                            <th style="text-align: center">Design Name</th>
                            <th style="text-align: center">Rate</th>
                            <th style="text-align: center" class="col-lg-1 col-md-1">Quantity</th>
                            <th style="text-align: center">Unit</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
        int rowid = 1;

        if (Model.ShopStockList != null && Model.ShopStockList.Any())
        {
            foreach (var item in Model.ShopStockList)
            {
                string quantity = "Quantity" + rowid;
                            <tr>
                                @{
                string rate = Convert.ToDouble(@item.MRP).ToString("#,###.00##");
                string qty = Convert.ToDouble(@item.Quantity).ToString("#,###.00##");
                                }
                                <td style="text-align: center">@rowid</td>
                                <td style="text-align: center">@item.ItemCode</td>
                                <td style="text-align: center">@item.ItemName</td>
                                <td style="text-align: center">@item.Material</td>
                                <td style="text-align: center">@item.Brand</td>
                                <td style="text-align: center">@item.DesignName</td>
                                <td style="text-align: right">@rate</td>
                                <td>
                                    <input type="text" value="@qty" class="form-control" id="@quantity" name="@quantity" style="text-align:center" autocomplete="off" onkeypress="return AllowNumbers(event)" /></td>
                                <td style="text-align: center">@item.Unit</td>
                            </tr>
                rowid++;
            }
        }
                        }

                    </tbody>
                </table>
            </div>
            <div style="height: 10px"></div>
        </div>
    </div>
    }
    else
    {
    <label>Godown Code : </label>
        int count = 1;
        foreach (var item in Model.GodownStockList)
        {
            if (count == 1)
            { 
    <label style="font-weight: normal">@item.GodownCode</label>
            }
            count++;
        }

    <div style="border: 1px solid;">
        <div class="row">
            <div style="height: 10px"></div>

            <div class="col-md-12 col-lg-12">

                <table class="table">
                    <thead>
                        <tr>
                            <th style="text-align: center">Sr.No.</th>
                            <th style="text-align: center">Item Code</th>
                            <th style="text-align: center">Item Name</th>
                            <th style="text-align: center">Material</th>
                            <th style="text-align: center">Brand</th>
                            <th style="text-align: center">Design Name</th>
                            <th style="text-align: center">Rate</th>
                            <th style="text-align: center" class="col-lg-1 col-md-1">Quantity</th>
                            <th style="text-align: center">Unit</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
        int rowid = 1;

        if (Model.GodownStockList != null && Model.GodownStockList.Any())
        {
            foreach (var item in Model.GodownStockList)
            {
                string quantity = "Quantity" + rowid;
                            <tr>
                                @{
                string rate = Convert.ToDouble(@item.MRP).ToString("#,###.00##");
                string qty = Convert.ToDouble(@item.Quantity).ToString("#,###.00##");
                                }
                                <td style="text-align: center">@rowid</td>
                                <td style="text-align: center">@item.ItemCode</td>
                                <td style="text-align: center">@item.ItemName</td>
                                <td style="text-align: center">@item.Material</td>
                                <td style="text-align: center">@item.Brand</td>
                                <td style="text-align: center">@item.DesignName</td>
                                <td style="text-align: right">@rate</td>
                                <td>
                                    <input type="text" value="@qty" class="form-control" id="@quantity" name="@quantity" style="text-align:center" autocomplete="off" onkeypress="return AllowNumbers(event)" /></td>
                                <td style="text-align: center">@item.Unit</td>
                            </tr>
                rowid++;
            }
        }
                        }

                    </tbody>
                </table>
            </div>
            <div style="height: 10px"></div>
        </div>
    </div>
    }
}
    