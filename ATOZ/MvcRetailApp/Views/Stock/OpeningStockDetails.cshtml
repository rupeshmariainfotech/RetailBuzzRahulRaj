<!-- Start: Main -->
<!-- Start: Sidebar -->
<section>
    <div class="mainwrapper">
        <!-- End: Sidebar -->
        @Html.Partial("../Shared/LeftMenu")

        <!-- Start: Content -->
        <div class="mainpanel">
            <div class="col-lg-12 col-md-12">
                <br />

                <h2>Opening Stock Details</h2><br />

                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="col-md-4 col-lg-4">
                            <label>Item Category:</label>&nbsp;&nbsp;
                            @Html.DisplayFor(model => model.OpeningStockDetails.Category)
                        </div>
                        <div class="col-md-4 col-lg-4">
                            <label>Item SubCategory:</label>&nbsp;&nbsp;
                            @Html.DisplayFor(model => model.OpeningStockDetails.SubCategory)
                        </div>
                    </div>
                </div>
                <br />
                <div class="col-md-12 col-lg-12">
                    <table class="table" style="border-color: #d2d2d2; border: outset">
                        <thead>
                            <tr>
                                <th style="text-align:center">
                                    <label>ItemName</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Description</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Design</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Size</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Color</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Quantity</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Unit</label>
                                </th>
                                
                                <th style="text-align:center">
                                    <label>Cost<br />Price</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Selling<br />Price</label>
                                </th>
                                <th style="text-align:center">
                                    <label>M.R.P.</label>
                                </th>
                                <th style="text-align:center">
                                    <label>Barcode</label>
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model.OpeningStockList)
                                {
                                    var quant = Convert.ToDouble(item.ItemQuantity);
                                    var quantity = quant.ToString("#,###.00##");
                                    var cp = Convert.ToDouble(item.CostPrice);
                                    var costprice = cp.ToString("#,###.00##");
                                    var sp = Convert.ToDouble(item.SellingPrice);
                                    var sellingprice = sp.ToString("#,###.00##");
                                    var mrp = Convert.ToDouble(item.MRP);
                                    var MRP = mrp.ToString("#,###.00##");
                                <tr>
                                    <td style="text-align:left">@item.ItemName</td>
                                    <td style="text-align:left">@item.Description</td>
                                    <td style="text-align:left">@item.DesignName</td>
                                    <td style="text-align:left">@item.Size</td>
                                    <td style="text-align:left">@item.Color</td>
                                    <td style="text-align:right">@quantity</td>
                                    <td style="text-align:left">@item.Unit</td>
                                    <td style="text-align:right">@costprice</td>
                                    <td style="text-align:right">@sellingprice</td>
                                    <td style="text-align:right">@MRP</td>
                                    <td style="text-align:center">
                                        @{
                                             string barcode = string.Empty;
                                             barcode = item.Barcode;
                                         }
                                        <img src="@barcode" title="" width="120" height="30"/>
                                    </td>
                                    <td style="text-align:center"><button type="button" id="printbtn" class="fa fa-xs btn btn-success" onclick="OpenPopUp(@item.OpeningStockId)">Print</button></td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

