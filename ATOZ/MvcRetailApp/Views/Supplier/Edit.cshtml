<script type="text/javascript">
    function EditRow(id, cnt, count) {
        document.getElementById("ResultSupplierMaster").style.display = "none";
        document.getElementById("LoadPartialView").style.display = "inline";
        for (var i = 1; i <= cnt; i++) {
            var allRowId = "rowId" + i;
            var editId = "editId" + i;
            var labelEditId = "labelEditId" + i;
            if (document.getElementById(editId) != null) {
                document.getElementById(editId).style.display = "none";
                document.getElementById(labelEditId).style.display = "inline";
                document.getElementById(allRowId).style.backgroundColor = "#F1DDE7";
            }
        }

        var rowId = "rowId" + count;
        if (document.getElementById(rowId) != null) {
            document.getElementById(rowId).style.backgroundColor = "lightgreen";
            //document.getElementById("ddltypeofsupplier").disabled = true;
            document.getElementById("SearchText").disabled = true;
            document.getElementById("SearchButton").disabled = true;
            document.getElementById("pagertextbox").disabled = true;
            document.getElementById("pagerdropdown").disabled = true;
            document.getElementById("pager").style.display = "none";

            $.ajax({
                url: '/Supplier/EditPartial',
                type: "GET",
                data: { id: id },
                success: function (data) {
                    $("#Data").html(data);
                    document.getElementById("Data").style.display = "inline";
                }
            });
        }
        //document.getElementById("uparrow").style.display = "inline";
        //document.getElementById("downarrow").style.display = "inline"
        $("#TotalNumberOfSuppliers").val(cnt);
        $("#SupplierRowValue").val(count);
    }
</script>

<script type="text/javascript">
    function UpdateSupplierData() {

        var errorcount = 0;
        if ($("#ddlstate").val() == "" || $("#ddlcountry").val() == "" || $("#ddldistrict").val() == "" ||
            $("#SupplierDetails_Address").val() == "" || $("#SupplierDetails_SupplierName").val() == "" ||
            $("#ddltypesupplier").val() == "" || $("#SupplierDetails_City").val() == "" || $("#SupplierDetails_ContactNo1").val() == "") {
            return false;
        }
        else if ($("#SupplierDetails_ContactNo1").val().length > 14 || $("#SupplierDetails_ContactNo1").val().length < 7) {
            return false;
        }
        else {
            if ($("#SupplierDetails_Pincode").val() != "") {
                if ($("#SupplierDetails_Pincode").val().length < 6 || $("#SupplierDetails_Pincode").val().length > 8) {
                    errorcount++;
                    return false;
                }
            }
            if ($("#SupplierDetails_ContactNo2").val() != "") {
                if ($("#SupplierDetails_ContactNo2").val().length < 7 || $("#SupplierDetails_ContactNo2").val().length > 14) {
                    errorcount++;
                    return false;
                }
            }
            if ($("#SupplierDetails_ContactNo3").val() != "") {
                if ($("#SupplierDetails_ContactNo3").val().length < 7 || $("#SupplierDetails_ContactNo3").val().length > 14) {
                    errorcount++;
                    return false;
                }
            }
        }


        if ($("#SupplierDetails_Email").val() != "") {
            $.getJSON("/User/EmailValidate", { email: $("#SupplierDetails_Email").val() },
                function (data) {
                    if (data != "true") {
                        errorcount++;
                        return false;
                    }
                    else {
                        if (errorcount == 0) {
                            if (document.getElementById("ddlsupplierbanknames").value != "") {
                                if ($("#ddlBankNames").val() != "") {
                                    if ($("#SupplierBankDetails_AccountNo").val() == "" || $("#SupplierBankDetails_AccountType").val() == "" ||
                                        $("#ddlBankbranches").val() == "") {
                                        alertbox("Branch,Account No and Account Type fields are required");
                                        return false;
                                    } else if ($("#SupplierBankDetails_AccountNo").val().length > 25 || $("#SupplierBankDetails_AccountNo").val().length < 10) {
                                        return false;
                                    }
                                    else if ($("#SupplierBankDetails_MICRCode").val() != "") {
                                        if ($("#SupplierBankDetails_MICRCode").val().length != 9) {
                                            return false;
                                        }
                                        else {
                                            /*if bank is selected in update page and update button gets clicked then update bankdetails first by sending yes then
                                            supplier's personal details if updatebank button gets clicked then update bankdetails only by sending no*/
                                            buttonclick('Yes');
                                        }
                                    }
                                    else { buttonclick('Yes'); }
                                }
                                else { supplierupdate(); }
                            }
                            else { supplierupdate(); }
                        }
                    }
                });
        }
        else {
            if (errorcount == 0) {
                if (document.getElementById("ddlsupplierbanknames").value != "") {
                    if ($("#ddlBankNames").val() != "") {
                        if ($("#SupplierBankDetails_AccountNo").val() == "" || $("#SupplierBankDetails_AccountType").val() == "" ||
                            $("#ddlBankbranches").val() == "") {
                            alertbox("Branch,Account No and Account Type fields are required");
                            return false;
                        } else if ($("#SupplierBankDetails_AccountNo").val().length > 25 || $("#SupplierBankDetails_AccountNo").val().length < 10) {
                            return false;
                        }
                        else if ($("#SupplierBankDetails_MICRCode").val() != "") {
                            if ($("#SupplierBankDetails_MICRCode").val().length != 9) {
                                return false;
                            }
                            else {
                                /*if bank is selected in update page and update button gets clicked then update bankdetails first by sending yes then
                                supplier's personal details if updatebank button gets clicked then update bankdetails only by sending no*/
                                buttonclick('Yes');
                            }
                        }
                        else { buttonclick('Yes'); }
                    }
                    else { supplierupdate(); }
                }
                else { supplierupdate(); }
            }
        }
    }
</script>

<script>
    function supplierupdate() {
        var selectedValues = $('#ddltypesupplier').val();
        $('input[id=hdnTypeSuppiler]').val(selectedValues);

        //$("#Update").attr("disabled", true);
        var count = document.getElementById("SupplierRowValue").value;
        var suppliername = "suppliername" + count;
        var txt = document.getElementById("SupplierDetails_SupplierName").value;
        txt = txt.replace(/\w\S*/g, function (txt) { return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase(); });
        document.getElementById(suppliername).innerHTML = txt;
        document.getElementById("SupplierDetails_SupplierName").value = txt;
        var suppmaster = {
            SupplierId: $("#SupplierDetails_SupplierId").val(),
            SupplierCode: $("#SupplierDetails_SupplierCode").val(),
            SupplierName: $("#SupplierDetails_SupplierName").val(),
            SupplierType: $("#hdnTypeSuppiler").val(),
            Country: $("#ddlcountry").val(),
            State: $("#ddlstate").val(),
            district: $("#ddldistrict").val(),
            City: $("#SupplierDetails_City").val(),
            Address: $("#SupplierDetails_Address").val(),
            Email: $("#SupplierDetails_Email").val(),
            Website: $("#SupplierDetails_Website").val(),
            Pincode: $("#SupplierDetails_Pincode").val(),
            ContactNo1: $("#SupplierDetails_ContactNo1").val(),
            ContactNo2: $("#SupplierDetails_ContactNo2").val(),
            ContactNo3: $("#SupplierDetails_ContactNo3").val(),
            STNo: $("#SupplierDetails_STNo").val(),
            VTNo: $("#SupplierDetails_VTNo").val(),
            OtherTax: $("#SupplierDetails_OtherTax").val(),
            TDSNo: $("#SupplierDetails_TDSNo").val(),
            pancard: $("#SupplierDetails_pancard").val(),
            ShortCode: $("#SupplierDetails_ShortCode").val(),
            checkState: $("#SupplierDetails_checkState").val(),
            Registered: $("#SupplierDetails_Registered").val()
        };

        $.ajax({
            url: '/Supplier/EditPartial',
            contentType: "application/json; charset=utf-8",
            type: "POST",
            data: JSON.stringify(suppmaster),
            datatype: "json",
            success: function (data) {

                document.getElementById("LoadPartialView").style.display = "none";
                document.getElementById("ResultSupplierMaster").style.display = "inline";
                $("#ResultSupplierMaster").html(data);
                document.getElementById("ddltypeofsupplier").disabled = false;
                document.getElementById("SearchText").disabled = false;
                document.getElementById("SearchButton").disabled = false;
                document.getElementById("pagertextbox").disabled = false;
                document.getElementById("pagerdropdown").disabled = false;
                document.getElementById("pager").style.display = "inline";
                document.getElementById("rowId" + count).style.background = "#F1DDE7";
            }
        });
    }
</script>


