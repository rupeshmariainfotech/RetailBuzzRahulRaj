                            }
                            else {
                                /*if bank is selected in update page and update button gets clicked then update bankdetails first by sending 'yes' then
                                  Transport's personal details if updatebank button gets clicked then update bankdetails only by sending 'no'*/
                                buttonclick('Yes');
                            }
