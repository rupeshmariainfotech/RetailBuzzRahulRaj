        }
        else if ($("#TransportDetails_ContactNo1").val().length < 7 || $("#TransportDetails_ContactNo1").val().length > 14) {
            return false;
        }
        else if ($("#TransportDetails_TransportName").val().length > 80) {
            return false;
        }
